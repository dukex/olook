<%= link_to "Minha Sacola #{order_total(@order)}".html_safe, "javascript:void(0);", :class => "cart #{'selected' if @order}" %>
<ul class="submenu">
  <li><p class="freight">FRETE GR√ÅTIS PARA SP E RJ, e Acima de r$120,00 para outros estados</p></li>
  <% if @order %>
    <% @order.line_items.each do |item| %>
      <li class="product_item">
        <%= image_tag item.variant.product.thumb_picture, :title => item.variant.name %>
        <h1><%= item.variant.name %></h1>
        <p class="price"><%= number_to_currency(item.variant.price) %></p>
        <p class="size"><%= item.variant.description %></p>
        <%= form_for(item, :url => cart_path, :remote => true, :method => :put, :html => { :class => "delete" }) do %>
          <%= hidden_field('variant','id', :value => item.variant.id) %>
          <%= hidden_field_tag('quantity', item.quantity, :class => 'quantity') %>
          <%= submit_tag('')  %>
        <% end %>
      </li>
    <% end %>
  <% end %>
  <li class="last">
    <%= link_to "X Fechar", "javascript:void(0);", :class => "close" %>
    <%= link_to "Finalizar Compra", cart_path, :class => "finish" %>
  </li>
</ul>


