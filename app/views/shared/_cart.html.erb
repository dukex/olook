<% unless params[:controller].include? "survey" %>
  <p class="new_sacola"><%= link_to "#{content_tag(:span, '', class: 'mini_coupon_tag') if @cart && @cart.coupon}MINHA SACOLA #{cart_total(@cart)}".html_safe, cart_path, :class => "cart #{'full' if @cart.try(:items_total).to_i > 0}" %></p>
<% end %>
<div id="cart_summary">
   <div class="scroll">
      <ul class="submenu">
        <li>
          <p class="freight">Frete grátis para sul e sudeste<br/><span>(em compras a partir de R$60)</span></p>
          <hr />
        </li>
        <% if @cart and @cart.coupon %>
          <li class="coupon_info">
            <p class="coupon_tag">Sua sacola agora tem um cupom de <%= coupon_value_for(@cart.coupon) %> de desconto.<br />Aproveite! ;)</p>
          </li>
        <% end %>

        <% @cart && @cart.items.each do |item| %>
          <%= render partial: 'shared/cart_line_item', locals: {item: item, hidden: false} %>
        <% end %>
        <li class="last" style="display:none">&nbsp;</li>
      </ul>
   </div>
   <p class="see_cart"><%= link_to "Ver minha sacola", cart_path, :class => "finish" %></p>
</div>
