<div id="wrapper_new_menu">
  <nav class="menu_new">
    <div class="content_new">
      <ul class="default_new">
        <% present 'Menu', :user => current_user do |menu_presenter| %>
          <%= menu_presenter.render_menu %>
        <% end %>
      </ul>
      <% unless params[:controller].include? "survey" %>
        <p class="new_sacola"><%= link_to "#{content_tag(:span, '', class: 'mini_coupon_tag') if @cart && @cart.coupon}SACOLA #{cart_total(@cart)}".html_safe, cart_path, :class => "cart #{'full' if @cart.try(:items_total).to_i > 0}" %></p>
      <% end %>
    </div>
  </nav>
</div>
