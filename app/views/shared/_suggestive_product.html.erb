<li class="product suggestion">
  <%= hidden_field_tag "products[#{position}]", "#{product.id}" %>
  <div class="box_product">
    <%= link_to product, :class => "product_link" do %>
      <%= image_tag(product.send(image_method ||= :showroom_picture) || "fake/showroom-product.png", :alt => product.name) %>
      <h1><%= product.name %></h1>
      <p class="warn percentage"><span>%</span><br />off</p>
    <% end %>
    <div class="line">
      <% unless position == 0 %>
        <span class="old">de: R$129,90</span>
      <% end %>
      <span>por: R$99,90</span>
    </div>
  </div>
</li>
