<div class="zip_code">
  <fieldset class="inputs">
    <ol>
      <li>
        <%= f.label :zip_code %><em>*</em>
        <%= f.text_field :zip_code, :class => "zip_code" %>
      </li>
    </ol>
  </fieldset>
</div>

<div class="address_fields">
  <fieldset class="inputs desc">
    <ol>
      <li>
        <%= f.label :first_name %><em>*</em>
        <%= f.text_field :first_name %>
      </li>
      <li>
        <%= f.label :last_name %><em>*</em>
        <%= f.text_field :last_name %>
      </li>
    </ol>
  </fieldset>
  <fieldset class="inputs">
    <ol>
      <li class="street">
        <%= f.label :street %><em>*</em>
        <%= f.text_field :street %>
      </li>
      <li class="number">
        <%= f.label :number %><em>*</em>
        <%= f.text_field :number %>
      </li>
      <li class="complement">
        <%= f.label :complement %>
        <%= f.text_field :complement %>
      </li>
      <li class="neighborhood">
        <%= f.label :neighborhood %><em>*</em>
        <%= f.text_field :neighborhood %>
      </li>
      <li class="city">
        <%= f.label :city %><em>*</em>
        <%= f.text_field :city %>
      </li>
      <li class="state">
        <%= f.label :state %><em>*</em>
        <%= f.select :state, Address::STATES.collect {|state| state}, {}, {:class => "custom_select"} %>
      </li>
      <li class="phone">
        <%= f.label :telephone %><em>*</em>
        <%= f.text_field :telephone, :class => "phone" %>
      </li>
      <li class="mandatory">
        <p><em>*</em> Campos obrigat√≥rios</p>
      </li>
    </ol>
  </fieldset>
</div>
