<header>
  <% if user_signed_in? %>
    <div class="contact">
      <div class="content">
        <ul>
          <li>Central de Atendimento (11) 2626-3489</li> |
          <li><%= link_to "falecom@olook.com.br", contact_path %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="content">
    <h1><%= link_to 'Olook', root_path %></h1>
    <h2 class="info_logo"><%= link_to "Mudamos, quer saber por que?", our_essence_path, :title => "Mudamos, quer saber por que?" %></h2>

    <div id="session">
      <% if user_signed_in? %>
        <h2>Olá, <span id="info_user"><%= current_user.name %></span></h2>
      <% end %>
      <ul>
        <% if user_signed_in? %>
          <li class="first"><%= link_to "Minha conta", user_orders_path %></li>
          <li><%= link_to "Ganhe <span>R$20</span> em créditos".html_safe, member_invite_path, :class => "invite" %></li>
          <li class="last"><%= link_to "Sair", destroy_user_session_path, :method => :delete %></li>
        <% else %>
          <li class="login">
            <p>Já faz parte? <%= link_to "Faça seu login", "javascript:void(0);", :rel => "sign-in-dropdown", :class => "trigger" %></p>
          </li>
        <% end %>
      </ul>
      <div class="sign-in-dropdown close">
        <%= render "users/sessions/form_user" %>
      </div>
    </div>
  </div>
</header>

<div id="wrapper_menu">
  <nav class="menu">
    <div class="content">
      <% if user_signed_in? && !current_user.half_user? %>
      <ul class="product_anchors">
        <li class="shoes"><%= link_to "Sapatos", member_showroom_path(:anchor => "shoes")  %></li>
        <li class="purse"><%= link_to "Bolsas", member_showroom_path(:anchor => "purse") %></li>
        <li class="accessories"><%= link_to "Acessórios", member_showroom_path(:anchor => "accessories") %></li>
      </ul>
      <% end %>
      <ul class="default">
        <% present 'Menu', :user => current_user do |menu_presenter| %>
          <%= menu_presenter.render_menu %>
        <% end %>
      </ul>
    </div>
  </nav>
</div>
