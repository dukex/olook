<header>
  <% if user_signed_in? %>
    <div class="contact">
      <div class="content">
        <ul>
          <li>Central de Atendimento (11) 2626-3489</li> |
          <li><%= link_to "falecom@olook.com.br", contact_path %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="content relative">
    <h1><%= link_to 'Olook', root_path %></h1>
    <%= image_tag("campaigns/christmas/santa_claus.png", :class => "christmas") %>     
	  <%= link_to image_tag("campaigns/logo-avc.jpg"), "/responsabilidade-social#campanha", :class => "img-avc" %>
    <div id="session">
      <% if user_signed_in? %>
        <div class="user">
          <ul>
            <li>Olá,</li>
            <li class="submenu">
              <%= link_to "#{current_user.name}", "#", :id => "info_user" %>
              <div class="my_account">
                <ul>
                  <li><%= link_to "Meus pedidos", user_orders_path %></li>
                  <li><%= link_to "Meus presentes", user_gifts_path %></li>
                  <li><%= link_to "Dados pessoais", edit_user_registration_path %></li>
                  <li><%= link_to "Endereços", user_addresses_path %></li>
                  <li class="last"><%= link_to "Meus créditos", user_credits_path %></li>
                </ul>
              </div>
            </li>
            <li><%= link_to "Sair", destroy_user_session_path, :method => :delete %></li>
          </ul>
        </div>
      <% end %>
      <ul>
        <% if user_signed_in? %>
          <li class="first"><%= link_to "Fidelidade Olook", loyalty_path %></li>
          <li class="last"><%= link_to "Ganhe créditos!", member_earn_credits_path, :class => "invite" %></li>
        <% else %>
          <li class="login">
            <p>Já faz parte? <%= link_to "Entre", "javascript:void(0);", :rel => "sign-in-dropdown", :class => "trigger" %> ou <%= link_to "Cadastre-se", new_survey_path %></p>
          </li>
        <% end %>
      </ul>
      <div class="sign-in-dropdown close">
        <%= render "users/sessions/form_user" %>
      </div>
    </div>
  </div>
</header>
