<%= yield :checkout_sidebar %>

<%= link_to "alterar", (cart_path unless has_payment), :class => "change" %>
<div class="request_info">
  <div class="item">
    <h1>Meu Pedido </h1>
    <table cellpadding="0" cellspacing="0">
      <tfoot>
        <tr>
          <td>Total:</td>
          <td class="value"><%= number_to_currency(cart_service.total) %></td>
        </tr>
      </tfoot>
      <tbody>
        <tr>
          <td>Sub-total:</td>
          <td class="value"><%= number_to_currency(cart_service.subtotal(:price))  %></td>
        </tr>
      <% if cart_service.gift_wrap? %>
        <tr>
          <td>Embalagem de presente</td>
          <td class="value">+ R$ 5,00</td>
        </tr>
      <% end %>
        <%
        credits = cart_service.total_credits_discount
        if credits > 0 %>
        <tr>
          <td>Crédito</td>
          <td class="value credit">- <%= number_to_currency(credits) %></td>
        </tr>
        <% end %>
        <%
        promotion = cart_service.total_discount_by_type(:promotion)
        if promotion > 0 %>
        <tr class="promotion">
          <td>Promoção</td>
          <td class="value credit">- <%= number_to_currency(promotion) %></td>
        </tr>
        <% end %>
        <%
        gift = cart_service.total_discount_by_type(:gift)
        if gift > 0 %>
        <tr>
          <td>Presente</td>
          <td class="value credit">- <%= number_to_currency(gift) %></td>
        </tr>
        <% end %>

        <%
        coupon = cart_service.total_discount_by_type(:coupon)
        if coupon > 0 %>
        <tr>
          <td>Cupom desconto</td>
          <td class="value credit">- <%= number_to_currency(coupon) %> <%= discount_percentage(cart_service.coupon.discount_percent) %></td>
        </tr>
        <% end %>
        <%

        if cart_service.freight_price > 0%>
        <tr>
          <td>Frete</td>
          <td class="value">+ <%= number_to_currency(cart_service.freight_price) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
