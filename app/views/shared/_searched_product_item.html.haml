- product_source ||= "SearchedProduct"
%li{:itemscope => true, :itemtype => "http://schema.org/Product",:class => "product#{" promotion" if product.promotion?}", "data-id" => product.id}
  %p.spy
    = content_tag(:span, "ESPIAR", :data => {:url => product_path(product.id), :gift => (gift ||= false), :shoe_size => (shoe_size ||= nil)}, :rel => "#{product.id}", :remote => true)

  = link_to product_seo_path(product), :class => "product_link", :rel => "#{product.id}", onclick: track_event(product_source, "clickOnProduct", product.id.to_s) do
    = image_tag(product.catalog_image, :itemprop => "image", :alt => product.formatted_name, :class => "async", :data => {:backside_picture => product.backside_picture, :product => product.catalog_image})
    %p.info-product
      %span.name{:itemprop => "name"}= product.formatted_name
      %br/
      %strong.brand{:itemprop => "brand"}= product.brand
      %br/
      - if product.promotion?
        %span.price
          %span.old{:itemprop => "price"}
            De
            = number_to_currency product.price
          %span.txt-pink{:itemprop => "offers"}
            &nbsp;por
            = number_to_currency product.retail_price
      - else
        %span.price{:itemprop => "price"}
          = number_to_currency product.price
          ou
          %span.plots= installments(product.price)
