- if search.pages > 1
  - if search.has_previous_page?
    = link_to "Página Anterior", "#{link}?#{ other_parameters}&page=#{ search.previous_page}", title: "Página Anterior", class: "anterior"

  - if search.current_page_greater_or_eq_than_limit_link_pages?
    = link_to "1", "#{link}?#{ other_parameters}&page=1"

  - if search.current_page_greater_than_limit_link_pages?
    = link_to "...", "#{link}?#{ other_parameters}&page=#{ search.last_three_pages }"

  - search.previous_pages.each do |page|
    = link_to "#{ page }", "#{link}?#{ other_parameters}&page=#{ page }"

  = link_to "#{ search.current_page }", "#{link}?#{ other_parameters}&page=#{ search.current_page }", class: "current"

  - search.next_pages.each do |page|
    = link_to "#{ page }", "#{link}?#{ other_parameters}&page=#{ page }"

  - if search.has_at_least_three_more_pages?
    = link_to "...", "#{link}?#{ other_parameters}&page=#{ search.next_three_pages }"

  - if search.has_next_page?
    = link_to "#{ search.pages }", "#{link}?#{ other_parameters}&page=#{ search.pages }"
    = link_to "Próxima Página", "#{link}?#{ other_parameters}&page=#{ search.next_page}", title: "Próxima Página", class: "proximo"

