<section class="news">
  <div>
    <h2><%= Setting.send("featured_#{Category.key_for(category_id).to_s}_label") %></h2>
  </div>
  <ul class="news-list products-list">
    <% @featured_products.each do |p| %>
    <%= render "shared/featured_product_item", :product => p %>
    <% end %>        
  </ul>
</section>