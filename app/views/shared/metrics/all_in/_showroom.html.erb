<script src="//i.btg360.com.br/bs.js" type="text/javascript"></script>
<script type="text/javascript">
    try{
        __bsd["id"]="8:1";
        bs.setaPagina('<%= "#{ params[:controller] } #{ params[:action] }"%>');

          bs.setaCliente("<%= user.id %>","<%= user.email %>");
          <% if request.url =~ /utm_source/ %>
              __bsd['utms'] = new Object();
              __bsd['utms']["utm_source"] = "olook";
              __bsd['utms']["utm_medium"] = "email";
              __bsd['utms']["utm_campaign"] = "<%= request.url.match(/utm_campaign=([^&]*)/) %>";
              __bsd['utms']["utm_content"] = "<%= request.url.match(/utm_content=([^&]*)/) %>";
          <% end %>
    }catch(e){
    }
</script>

