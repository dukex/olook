%li.product_item{"data-id" => item.id, style: ( 'display:none;' if hidden )}
  - unless item.thumb_picture.nil?
    = image_tag item.thumb_picture, :title => item.name
  %h2= item.product.formatted_name(24)
  %p.size
    Tamanho: #{item.description}
  %p.qte
    Quantidade:
    %span= item.quantity
  %p.price= number_to_currency(item.retail_price)
