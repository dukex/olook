- content_for :footer do
  :javascript
    = track_event('Modal', 'LoginPage', @user.id, no_interactive: true)

.box-remember-login
  %h3 LEMBRAMOS DE VOCÊ!
  %p Se você já tem cadastro, não precisa fazer outro,</br> basta informar sua senha abaixo para entrar. ;)
  =form_for @user, url: session_path(@user), method: 'post', html:{ :target => '_parent' } do |f|
    %fieldset
      =f.label :email, "E-mail:"
      =f.text_field :email
    %fieldset
      =f.label :password, "Senha:"
      =f.password_field :password
    %fieldset.botoes
      %div
        =f.check_box :remember_me, :checked => true
        =f.label :remember_me, "Lembrar de mim"
        %p 
          %a{:href => "/conta/password/new", :target => "_blank"} Esqueci minha senha
      =f.submit :value => "ENTRAR", :class => "bt-enter"
  %p.new_user Novo por aqui? <a href="/quiz/new">Então cadastre-se </a>  
  %button{:type => "button", :class => "close"} Fechar
