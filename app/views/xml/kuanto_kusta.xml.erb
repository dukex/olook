<?xml version="1.0" encoding="UTF-8"?>
<produtos>
  <% @products.each do |product| %>
    <produto>
      <codigo>
        <%= product.id %></codigo>
      <nome>
        <%= product.name %></nome>
      <descricao>
        <%= product.description %></descricao>
      <preco_de>
        <%= product.price %></preco_de>
      <preco>
        <%= product.retail_price %></preco>
      <nparcela></nparcela>
      <vparcela></vparcela>
      <url>
        <%= product.product_url(utm_source: "kuanto_kusta").gsub("utm_content=#{ product.id }&", "") %></url>
      <url_imagem>
        <%= first_image_of product %></url_imagem>
      <departamento><%= product.category_humanize %></departamento>
      <subdepartamento><%= product.subcategory_name %></subdepartamento>
      <isbn/>
      <editora/>
      <autor/>
      <mpc></mpc>
      <ean></ean>
      <sku></sku>
    </produto>
  <% end %>
</produtos>
