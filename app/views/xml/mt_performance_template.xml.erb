<?xml version="1.0" encoding="UTF-8"?>
<produtos>
<% @products.each do |product| %>
<% unless product.sold_out? %>
<produto>
<nome><![CDATA[<%= product.name %>]]></nome>
<descricao><![CDATA[<%= product.description %>]]></descricao>
<url><![CDATA[<%= product.product_url(:utm_source => "mt_performance", :utm_campaign => "produtos") %>]]></url>
<imagem><![CDATA[<%= full_image_path product.xml_picture(:main) %>]]></imagem>
<marca><![CDATA[<%= product.brand %>]]></marca>
<preco><%= number_with_precision(product.retail_price, :precision => 2) %></preco>
<preco_original><%= number_with_precision(product.price, :precision => 2) %></preco_original>
<categoria><![CDATA[<%= full_category(product) %>]]></categoria>
</produto>
<% end %>
<% end %>
</produtos>
