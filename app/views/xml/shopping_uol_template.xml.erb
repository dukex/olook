<?xml version="1.0" encoding="iso-8859-1" ?>
<produtos>
  <% @products.each do |product| %>
    <% unless product.sold_out? %>
      <produto>
        <codigo><%= product.id %></codigo>
        <descricao><![CDATA[<%= product.description %>]]></descricao>
        <preco><%= sprintf("%.02f", product.price).gsub('.', ',').to_s %></preco>
        <nparcela><%= build_installment_text(product.retail_price).chars.first %></nparcela>
        <vparcela><%= build_installment_text(product.retail_price, separator: ",").split("x").last %></vparcela>
        <marca><![CDATA[<%= product.brand %>]]></marca>
        <url><![CDATA[<%= product.product_url(:utm_source =>"shopping_uol", :utm_campaign => "Produtos", :utm_medium => "Remarketing") %>]]></url>
        <url_imagem><![CDATA[<%= full_image_path product.xml_picture(:main) %>]]></url_imagem>
        <Frete>Sim</Frete>
        <departamento></departamento>
      </produto>
    <% end %>
  <% end %>
</produtos>
