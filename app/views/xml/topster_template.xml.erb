<produto>
    <id_produto><%= product.id.to_s %></id_produto>
    <link_produto><![CDATA[<%= product.product_url(:utm_source => "topster")%>]]></link_produto>
    <nome_produto><![CDATA[<%= product.name%>]]></nome_produto>
    <marca><%= product.brand %></marca>
    <categoria><%= full_category(product)%></categoria>
    <cores>
        <cor><%= product.color_name %></cor>
    </cores>
    <descricao><![CDATA[<%= product.description%>]]></descricao>
    <preco_de><%= number_with_precision(product.price, :precision => 2)%></preco_de>
    <preco_por><%= number_with_precision(product.retail_price, :precision => 2)%></preco_por>
    <parcelamento><%= build_installment_text(product.retail_price)%></parcelamento>
    <imagens>
      <% product.pictures.order(:position).each do |picture| %>
        <imagem><%= picture.image%></imagem>
      <% end %>
    </imagens>
    <estoque><%= product.inventory > 0 ? "sim" : "não" %></estoque>
    <estoque_baixo><%= product.inventory >= 2 ? "não" : "sim" %></estoque_baixo>
</produto>