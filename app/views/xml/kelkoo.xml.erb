<?xml version="1.0" encoding="UTF-8"?>
<products>
<% @products.each do |product| %>
<product>
  <title><![CDATA[<%= product.name %>]]></title>
  <product-url><![CDATA[<%= product.product_url(utm_source: "kelkoo", utm_medium: "merchant", :utm_campaign => "produtos") %>]]></product-url>
  <price><%= number_with_precision(product.retail_price, precision: 2, separator: ".") %></price>
  <brand><![CDATA[<%= product.brand %>]]></brand>
  <description><![CDATA[<%= product.description %>]]></description>
  <image-url><![CDATA[<%= first_image_of product %>]]></image-url>
  <ean></ean>
  <merchant-category><![CDATA[<%= "#{product.category_humanize}/#{product.subcategory}" %>]]></merchant-category>
  <availability>1</availability>
  <mpn><![CDATA[<%= product.id %>]]></mpn>
  </product>
<% end %>
</products>
