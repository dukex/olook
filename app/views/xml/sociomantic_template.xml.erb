<?xml version="1.0" encoding="UTF-8"?>
<products xmlns="http://data-vocabular.org/product/">
<% @products.each do |product| %>
<product>
<identifier><%= product.id %></identifier>
<fn><![CDATA[<%= product.formatted_name(200) %>]]></fn>
<description><![CDATA[<%= product.description %>]]></description>
<category><![CDATA[<%= product.category_humanize %>]]></category>
<brand><%= product.brand %></brand>
<price><%= product.retail_price %></price>
<amount><%= product.price %></amount>
<installmenttimes><%= installments_number(product.price) %></installmenttimes>
<installmentvalue><%= installments_value(product.price, separator: ',') %></installmentvalue>
<currency>BRL</currency>
<url><![CDATA[<%= product.product_url(:utm_source => "sociomantic", :utm_medium => "Remarketing", :utm_campaign => "Produtos") %>]]></url>
<photo><%= full_image_path product.xml_picture(:main) %></photo>
<score><%= SociomanticScore.calculate_for(product) %></score>
</product>
<% end %>
</products>