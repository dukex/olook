<?xml version="1.0" encoding="UTF-8"?>
<products xmlns="http://data-vocabular.org/product/">
<% @products.each do |product| %>
<product>
<identifier><%= product.id %></identifier>
<fn><%= product.name %></fn>
<description><%= product.description %></description>
<category><%= product.category_humanize %></category>
<brand><%= product.brand %></brand>
<price><%= product.retail_price %></price>
<amount><%= product.price %></amount>
<installmenttimes><%= installments_number(product.price) %></installmenttimes>
<installmentvalue><%= installments_value(product.price, separador: ',') %></installmentvalue>
<currency>BRL</currency>
<url><%= product.product_url(:utm_source => "sociomantic", :utm_medium => "Remarketing", :utm_campaign => "Produtos") %></url>
<photo><%= product.main_picture.try(:image) %></photo>
</product>
<% end %>
</products>

