<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:g="http://base.google.com/ns/1.0">
<channel>
<% @products.each do |product| %>
<item>
<g:id><%= product.id %></g:id>
<title><%= product.subcategory %> <%= product.name %></title>
<description><%= product.description %></description>
<g:google_product_category><%= to_google_shopping_category product.category %></g:google_product_category>
<g:product_type><%= product.category_humanize %></g:product_type>
<link><%= product.product_url(:utm_source =>"google", :utm_medium => "merchant") %></link>
<g:image_link><%= first_image_of product %></g:image_link>
<g:additional_image_link><%= image_at_position(product, DisplayPictureOn::GALLERY_2) %></g:additional_image_link>
<g:condition>new</g:condition>
<g:price><%= number_with_precision(product.price, precision: 2, separator: ".") %></g:price>
<g:sale_price><%= number_with_precision(product.retail_price, precision: 2, separator: ".") %></g:sale_price>
<g:brand>olook</g:brand>
<g:gender>female</g:gender>
<g:age_group>adult</g:age_group>
<% product.variants.each do |variant| %>
<g:size><%= variant.display_reference %></g:size>
<% end %>
<g:item_group_id><%= product.id %></g:item_group_id>
<g:color><%= product.color_name %></g:color>
<% product.details.each do |detail| %>
  <% if ["Metal", "Material externo"].include?(detail.translation_token) %>
  <g:material><%= detail.description %></g:material>
  <% end %>
<% end %>
</item>
<% end %>
</channel>
</rss>
