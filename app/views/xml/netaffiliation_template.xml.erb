<?xml version="1.0" encoding="UTF-8"?>
<products>
<% @products.each do |product| %>
<product id="<%= product.id %>">
<name><![CDATA[<%= product.name %>]]></name>
<smallimage><![CDATA[<%= full_image_path product.xml_picture(:thumb) %>]]></smallimage>
<bigimage><![CDATA[<%= full_image_path product.xml_picture(:main) %>]]></bigimage>
<producturl>
  <![CDATA[<%= product.product_url(:utm_source => "net_affiliation", :utm_medium => "vitrine", :utm_campaign => "compradores", :utm_content => 6691) %>]]>
</producturl>
<description><![CDATA[<%= product.description %>]]></description>
<price><%= number_with_precision(product.retail_price, precision: 2, separator: ",") %></price>
<retailprice><%= number_with_precision(product.price, precision: 2, separator: ",") %></retailprice>
<discount><![CDATA[<%= discount_sanitize product %>]]></discount>
<brand><![CDATA[<%= product.brand %>]]></brand>
<recommendable>1</recommendable>
<instock><%= product.instock %></instock>
<category><%= product.category_humanize %></category>
</product>
<% end %>
</products>
