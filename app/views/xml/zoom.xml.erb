<?xml version="1.0" encoding="UTF-8"?>
<produtos>
  <% @products.each do |product| %>
    <produto>
      <codigo><%= product.id %></codigo>
      <nome><%= product.formatted_name(200) %></nome>
      <descricao><%= product.description %></descricao>
      <preco_de><%= product.price %></preco_de>
      <preco><%= product.retail_price %></preco>
      <nparcela></nparcela>
      <vparcela></vparcela>
      <url><%= product.product_url(:utm_source =>"zoom", :utm_campaign => "produtos") %></url>
      <url_imagem><%= full_image_path product.main_picture.try(:image) %></url_imagem>
      <departamento><%= product.category_humanize %></departamento>
      <subdepartamento><%= product.subcategory_name %></subdepartamento>
      <marca><%= product.brand %></marca>
      <isbn/>
      <editora/>
      <autor/>
      <mpc></mpc>
      <ean></ean>
      <sku></sku>
    </produto>
  <% end %>
</produtos>
