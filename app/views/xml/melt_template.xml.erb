<?xml version="1.0" encoding="UTF-8"?>
<products>
<% @products.each do |product| %>
  <product>
    <id><![CDATA[<%= product.id %>]]></id>
    <name><![CDATA[<%= product.formatted_name(200) %>]]></name>
    <image_url><![CDATA[<%= full_image_path product.xml_picture(:main) %>]]></image_url>
    <url><![CDATA[<%= product.product_url(:utm_source => "melt", :utm_campaign => "produtos") %>]]></url>
    <price><![CDATA[<%= number_with_precision(product.retail_price, :precision => 2) %>]]></price>
    <id><![CDATA[]]></id>
  </product>
<% end %>
</products>
