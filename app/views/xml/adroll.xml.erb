<?xml version="1.0" encoding="UTF-8"?>
<products>
<% @products.each do |product| %>
<product id="<%= product.id %>">
<name><%= product.name %></name>
<smallimage><%= product.thumb_picture %></smallimage>
<bigimage><%= product.main_picture.try(:image) %></bigimage>
<producturl><%= product.product_url(:utm_source => "adroll", :utm_medium => "banner", :utm_campaign => "remessaging") %></producturl>
<description><%= product.description %></description>
<price><%= product.price %></price>
<retailprice><%= product.retail_price %></retailprice>
<recommendable><%= build_installment_text(product.retail_price) %></recommendable>
<instock><%= product.instock %></instock>
<category><%= product.category %></category>
</product>
<% end %>
</products>
