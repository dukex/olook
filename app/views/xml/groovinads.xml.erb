<?xml version="1.0" encoding="UTF-8"?>
<products>
<% @products.each do |product| %>
<product id="<%= product.id %>">
<name><%= product.name %></name>
<smallimage><%= full_image_path product.thumb_picture %></smallimage>
<bigimage><%= full_image_path product.main_picture.try(:image) %></bigimage>
<producturl><%= product_url(product) %></producturl>
<description><%= product.description %></description>
<price><%= number_with_precision(product.retail_price, precision: 2, separator: ",") %></price>
<retailprice><%= number_with_precision(product.price, precision: 2, separator: ",") %></retailprice>
<discount><%= discount_sanitize product %></discount>
<brand><%= product.brand %></brand>
<recommendable>1</recommendable>
<instock><%= product.instock %></instock>
<category><%= product.subcategory %></category>
</product>
<% end %>
</products>
