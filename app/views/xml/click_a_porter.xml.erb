<?xml version="1.0" encoding="UTF-8"?>
<produtos>
<% @products.each do |product| %>
<% unless product.sold_out? %>
<produto>
<id_produto><![CDATA[<%= product.id %>]]></id_produto>
<link_produto><![CDATA[<%= product.product_url(:utm_source => "click_a_porter") %>]]></link_produto>
<nome_produto><![CDATA[<%= product.name %>]]></nome_produto>
<marca><![CDATA[olook]]></marca>
<categoria><![CDATA[<%= full_category(product) %>]]></categoria>
<cores><cor><![CDATA[<%= product.color_name %>]]></cor></cores>
<descricao><![CDATA[<%= product.description %>]]></descricao>
<preco_de><![CDATA[<%= number_with_precision(product.price, :precision => 2) %>]]></preco_de>
<preco_por><![CDATA[<%= number_with_precision(product.retail_price, :precision => 2) %>]]></preco_por>
<parcelamento><![CDATA[<%= build_installment_text(product.retail_price) %>]]></parcelamento>
<imagens>
<% product.pictures.order(:position).each do |picture| %>
<imagem><![CDATA[<%= picture.image %>]]></imagem>
<% end %>
</imagens>
<num_tams>
<% product.variants.each do |variant| %>
<num_tam><![CDATA[<%= variant.description %>]]></num_tam>
<% end %>
</num_tams>
</produto>
<% end %>
<% end %>
</produtos>
