<?xml version="1.0" encoding="utf-8"?>
<nombre_tienda>
  <% @products.each do |product| %>
    <producto>
      <id><%= product.id %></id>
      <nombre><%= product.formatted_name %></nombre>
      <descripcion><![CDATA[<%= product.description %>]]></descripcion>
      <fotos>
        <% product.pictures.each do |picture| %>
          <foto><%= full_image_path picture.image %></foto>
        <% end %>
      </fotos>
      <marca><%= product.brand %></marca>
      <categoria><%= product.category %></categoria>
      <color><%= product.color_name %></color>
      <precio><%= number_with_precision(product.retail_price, precision: 2, separator: ",") %></precio>
      <precio_anterior><%= number_with_precision(product.price, precision: 2, separator: ",") %></precio_anterior>
      <stock><%= product.inventory %></stock>
      <genero>F</genero>
      <link><%= product.product_url(utm_source: 'shopear') %></link>
    </producto>
<% end %>
</nombre_tienda>
