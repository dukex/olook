<?xml version="1.0" encoding="UTF-8"?>
<products>
<% @products.each do |product| %>
<product>
<id><%= product.id %></id>
<name><%= product.formatted_name(200) %></name>
<image><%= product.main_picture.try(:image) %></image>
<url>
  <%= product.product_url(:utm_source => "triggit", :utm_medium => "Remarketing", :utm_campaign => "Produtos", :utm_content => product.id) %>
</url>
<price><%= number_with_precision(product.retail_price, precision: 2, separator: ".") %></price>
<brand> <%= product.brand %> </brand>
<description> <%= product.description %> </description>
<category><%= product.subcategory %></category>
</product>
<% end %>
</products>
