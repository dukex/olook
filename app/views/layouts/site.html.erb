<% content_for :top_my_account do %>
  <%= render "shared/header_default" %>
  <%= render "shared/menu" unless params[:controller] == "survey" %>
  
  <script type="text/javascript">  
    if(window.opener) {
       window.opener.top.location = window.location.href;
       document.getElementsByTagName('body')[0].style.display='none';
       setTimeout(function(){
         window.close();
       },300)
     }
  </script>
   
<% end %>

<% content_for :content do %>
  <%= content_for?(:news_content) ? yield(:news_content) : yield %>
<% end %>

<%= content_for :site_footer, render(:partial => "shared/footer") %>

<%= render :template => 'layouts/application' %>
