<% content_for :top_my_account do %>
  <%= render "shared/header_default" %>
  <%= render "shared/menu" %>
<% end %>  

  
<% content_for :content do %>
 <%= content_for?(:news_content) ? yield(:news_content) : yield %>
  <ul class="links_moip">
    <% if @referer %>
      <li class="link"><%= link_to @referer[:text], @referer[:url], :class => "back_link" %></li>
    <% else %>
      <li class="link"><%= link_to "Voltar para minha vitrine", member_showroom_path, :class => "back_link" %></li>
    <% end %>
    <% if @payment.nil? || !["Mastercard", "Visa", "Diners"].include?(@payment.bank) %>
      <li class="moip">Pagamento MoIP</li>
    <% end %>
  </ul>
<% end %>

<%= content_for :site_footer, render(:partial => "shared/footer") %>

<%= render :template => 'layouts/application' %>
