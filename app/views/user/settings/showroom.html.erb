<% content_for :head do %>
  <%= stylesheet_link_tag "section/my_account" %>
<% end %>

<div id="my_account" class="showroom">
  <div id="box_menu">
    <%= render "shared/my_account/menu" %>
  </div>
  <div id="data">
    <div class="box_title">
      <h1 class="showroom">Minha Vitrine</h1>
    </div>
    <div class="container">
      <h2>Qual o tamanho do seu sapato?</h2>
      <%= form_for(current_user.user_info, :as => "user_info", :url => "minha-vitrine/update") do |f| %>
        <ul class="shoes_size">
          <li>
            <label for="user_info_shoes_size_33">
              33
              <%= f.radio_button :shoes_size, "33" %>
            </label>
          </li>
          <li>
            <label for="user_info_shoes_size_34">
              34
              <%= f.radio_button :shoes_size, "34" %>
            </label>
          </li>
        </ul>
        <%= f.submit "" %>
      <% end %>
    </div>
  </div>
</div>

