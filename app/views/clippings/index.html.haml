- content_for :footer do
  = javascript_include_tag "clippings"

- content_for(:head) do
  %meta{property: "og:title", content: "Olook na Imprensa"}
  %meta{property: "og:description", content: "Tudo o que é publicado sobre a Olook na mídia você confere aqui: www.olook.com.br/olook-na-imprensa. Acompanhe as novidades! ;)"}
  %meta{property:"og:image", content:""}
  %meta{property:"og:url", content:"http://www.olook.com/olook-na-imprensa"}
  %meta{property:"og:site_name", content:"Olook"}
  %meta{property: "og:type", content:"website"}

#socialmedia
  %a.twitter-share-button{"data-text" => "Tudo o que é publicado sobre a Olook na mídia você confere aqui: www.olook.com.br/olook-na-imprensa. Acompanhe as novidades! ;)", "data-url" => "www.olook.com.br", "data-count" => "none", "data-counturl" => "www.olook.com.br/olook-na-imprensa"} Tweetar
 
  %fb:like{"href" => "http://olook.com.br/imprensa", "data-action" => "like", "layout" => "button_count", "send" => "false", "show-faces" => "false"}


%table
  - @clippings.each do |clipping|
    %tr
      %td
        = image_tag clipping.logo
      %td
        = clipping.title
      %td
        = simple_format clipping.clipping_text
      %td
        = link_to "Clique aqui para ver a matéria completa", clipping.link, target: :blank