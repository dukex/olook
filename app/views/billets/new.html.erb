<% content_for :head do %>
  <%= stylesheet_link_tag "section/checkout" %>
<% end %>

<% content_for :footer do %>
  <%= javascript_include_tag "checkout" %>
<% end %>

<section id="payment" class="checkout">
  <%= form_for(@payment) do |f| %>
    <section class="main">
      <h1>Escolha uma forma de pagamento</h1>
      <%= render :partial => "shared/errors", :locals => { :object => @payment } %>
      <%= render :partial => "shared/payments/payment_methods" %>
      <p class="generate_billet">Você poderá imprimir seu boleto após a finalização do pedido, ou na sessão Meus Pedidos, em sua conta. <br />Também enviaremos o link de impressão para seu email.<br /><strong>Seu pedido ficará reservado por 48hrs.</strong></p>
      <p class="generate_billet last"><span>Importante:</span> O prazo de entrega é considerado a partir da confirmação do pagamento. Lembramos que pagamentos via boleto podem levar até 48h para serem confirmados.</p>
      <%= render "shared/marcos_proenca" %>
    </section>
    <section class="sidebar">
      <% content_for :checkout_sidebar do %>
        <%= render :partial => "shared/payments/info_address", :locals => { :order => @order } %>
      <% end %>
      <%= render "shared/payments/info_sidebar", :cart => @cart %>
    </section>
  <% end %>
</section>
