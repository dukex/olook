=javascript_include_tag "underscore"
=javascript_include_tag "backbone"

#main

#addressList

#addressApp

#addressForm

%script{type: "text/template", id: "address-template"}
  %fieldset
    %input{type: 'radio', value: '{{ id }}'}
    %ul
      %li 
      %li {{ street }}, {{ number }}
      %li {{ neighborhood }} - {{ zip_code }}
      %li {{ city }},  {{state}} 
      %li= link_to 'Alterar', '#', class: 'js-changeAddress', id: '{{id}}'
      %li <a href="#" id='{{id}}' class='zip'>Remover</a>

%script{id: "form_template", type: "text/template"}
  =link_to 'Adicionar endereco', '#', class: 'js-addAddress'
  .js-address_form{style:'display: none'}
    %form
      .control-group.zip_code
        %p
          Cep:
          %input{type:'text', id:'zip_code', name:'zip_code', value:'{{zip_code}}'}
        %span.help-inline
      .control-group.street        
        %p
          Rua: 
          %input{type:'text', id:'street', name:'street', value:'{{street}}'}
        %span.help-inline
      .control-group.state
        %p
          Estado:
          %input#state{name: "state", type: "text", value:'{{state}}'}
        %span.help-inline

      .control-group.number
        %p
          Numero:
          %input#number{name: "number", type: "text", value: '{{number}}'}
        %span.help-inline

      .control-group.neighborhood
        %p
          Bairro:
          %input#neighborhood{name: "neighborhood", type: "text", value: '{{neighborhood}}'}
        %span.help-inline

      .control-group.city
        %p
          Cidade:
          %input#city{name: "city", type: "text", value: '{{city}}'}
        %span.help-inline

      .control-group.telephone
        %p
          Telefone:
          %input#telephone{name: "telephone", type: "text", value: '{{telephone}}'}
        %span.help-inline      

      %p
        %input#save-btn{name: "save-btn", type: "button", value: "Cadastrar"}

=javascript_include_tag "beta.js"