.filter
  %p.title-category Cores
  %ul.category-list.cores
    - filters_by("color", search, use_fields: [:category]).each do |text, amount|
      %li{:class => text.chomp.parameterize}= filter_link_to(@filters_presenter.path(@url_builder.add_filter(:color, text)), text.chomp, search.filter_selected?(:color, text.chomp))

.filter
  %p.title-category Marca
  %ul.category-list
    - filters_by('brand_facet', search, use_fields: [:category]).each do |text, amount|
      %li= filter_link_to(@filters_presenter.path(@url_builder.add_filter(:brand, text)), text.chomp.gsub('Ç', 'ç').downcase.titleize, search.filter_selected?(:brand, text.chomp))
