<%= form_tag "#" do %>
  <div class="question">
    <h1>Style Quiz</h1>
    <h2>Qual dessas peças não pode faltar no dia a dia de <span>Jéssika</span>?</h2>
    <fieldset class="inputs">
      <ul>
        <% 3.times do |index| %>
        <li>
          <%= radio_button_tag 'question', index %>
          <%= image_tag "/assets/fake/dress.jpg" %>
        </li>
        <% end %>
      </ul>
    </fieldset>
  </div>
  <div class="friend">
    <fieldset class="buttons">
      <ul>
        <li>
          <div class="pic_mask">
            <%= image_tag "/assets/fake/photo-facebook.png" %>
          </div>
          <%= link_to "Próxima amiga >", "javascript:void(0);", :class => "next_friend" %>
        </li>
        <li>
          <%= submit_tag "" %>
        </li>
      </ul>
    </fieldset>
  </div>
<% end %>
