<div id="quiz_container">
  <%= form_for :survey, :url => post_survey_answer_path, :remote => true do |f| %>
    <div class="question">
      <h1>Style Quiz</h1>
      <h2>Qual dessas peças não pode faltar no dia a dia de <span><%= @friend.try(:name) %></span>?</h2>
      <fieldset class="inputs">
        <ul>
          <li><%= f.hidden_field 'friend_uid', :value => @friend.try(:uid) %></li>
          <% answer_number = 0 %>
          <% @question.answers.each do |answer| %>
          <li>
            <%= f.radio_button 'question', answer.id %>
            <%= image_tag "/assets/quiz/#{answer.question.id}_#{answer_number += 1}.jpg"  %>
          </li>
          <% end %>
        </ul>
      </fieldset>
    </div>
    <div class="friend">
      <fieldset class="buttons">
        <ul>
          <li>
            <div class="pic_mask">
              <%= image_tag user_avatar(@friend) if @friend %>
            </div>
            <%= link_to "Próxima amiga >", update_survey_question_path(:format => :js), :remote => true, :class => "next_friend" %>
          </li>
          <li>
            <%= f.submit "" %>
          </li>
        </ul>
      </fieldset>
    </div>
  <% end %>
</div>
