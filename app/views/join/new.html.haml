#fb-root
- content_for(:head) do
  = stylesheet_link_tag  "new_structure/section/survey"
  = stylesheet_link_tag  "new_structure/section/join"
  = stylesheet_link_tag  "campaign_emails"
- content_for(:bottom) do
  = javascript_include_tag "join"

#user_manager
  =image_tag "quiz/style.png", :class => "stamp"
  .left_box
    %h2
      Só mais um passinho...
      %br
      E você descobrirá seu estilo!
    %p
      Cadastre-se e receba por email novidades
      %br
      sobre moda, tendências e promoções exclusivas
    %p.users
      %span 122273
      pessoas já responderam nosso style quiz
      = image_tag("quiz/users.jpg")
    %a.fb_login_button Entrar com FB
    %p.fb OU

    %h2 Cadastre-se na Olook

    %p
    = form_for(@user, url: join_path) do |f|
      = hidden_field_tag 'qr_uuid', params[:uuid]
      #error_explanation
        %ul
          - @user.errors.full_messages.each do |msg|
            %li= msg

      .first_name.field
        = f.label :first_name
        = f.text_field :first_name
      .last_name.field
        = f.label :last_name
        = f.text_field :last_name
      .email.field
        = f.label :email
        = f.text_field :email
      .password.field
        = f.label :password, "Senha #{content_tag("span", '(min. 6 caracteres)', class: 'hint')}".html_safe
        = f.password_field :password
      .password_confirmation.field
        = f.label :password_confirmation, "Confirmar senha"
        = f.password_field :password_confirmation
      .gender.field
        = f.label :gender, "Você é:"
        %p.sex
          Selecione
        = f.select :gender, {'Selecione' => "", 'Mulher' => 0, 'Homem' => 1 }
      .cep.field
        = f.label :zip_code, 'CEP'
        = f.text_field :zip_code

      %p.notes
        Concluindo o cadastro você aceita nossos
        = link_to 'termos de uso', terms_path
        %br
        e a nossa
        = link_to 'política de privacidade', privacy_path

      = f.submit 'Cadastrar'


  .right_box
    = image_tag("quiz/pb_rightb.jpg")
    %h2 Já tenho cadastro
    = link_to 'Então é só entrar ;)', "javascript:void(0);", id: "login"

#modal.promo-olook
#overlay-campaign
.box-remember-login
  %h3 Lembramos de você!
  %p
    Informe o seu e-mail e senha abaixo:
  = form_for(:user, :as => :user, :url => session_url(:user, :protocol => protocol)) do |f|
    %fieldset
      =f.label :email, "E-mail:"
      =f.text_field :email
    %fieldset
      =f.label :password, "Senha:"
      =f.password_field :password
    %fieldset.botoes
      %div
        =f.check_box :remember_me, :checked => true
        =f.label :remember_me, "Lembrar de mim"
        %p
          %a{:href => "/conta/password/new", :target => "_blank"} Esqueci minha senha
      =f.submit :value => "ENTRAR", :class => "bt-enter"
  %button{:type => "button", :class => "close"} Fechar
