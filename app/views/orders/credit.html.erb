<% content_for :head do %>
  <%= stylesheet_link_tag "section/checkout" %>
<% end %>

<section id="payment" class="checkout confirmation">
  <section class="main">
    <h1>Seu pedido foi efetuado com sucesso!!</h1>
    <% if @payment_response.success? %>
      <div class="payment_link">
        <%= link_to "banco", @payment.url, :target => "_blank", :class => "bank_flag #{@payment.bank}" %>
        <p>Estamos analisando seu pagamento junto a operadora de crédito.</p>
        <%= link_to "Voltar para minha vitrine", member_showroom_path, :class => "link" %>
      </div>
      <p class="description">Obrigada pela sua compra! Mal podemos esperar para você receber o seu produto. Não se esqueça de conferir se todos os dados ao lado estão corretos. Se você tiver qualquer dúvida ou precisar solicitar alguma alteração nos dados do seu pedido, basta enviar um e-mail para <%= link_to "falecom@olook.com.br", "mailto:falecom@olook.com.br" %>.</p>
    <% else %>
      <p>Houve um problema com seu pagamento, por favor refaça seu pedido.</p>
    <% end %>
  </section>
  <section class="sidebar">
    <% content_for :checkout_sidebar do %>
      <%= render :partial => "shared/payments/info_payment", :locals => { :order => @order } %>
      <%= render "shared/payments/info_address", :order => @order %>
    <% end %>
    <%= render "shared/payments/info_sidebar", :cart => @cart %>
  </section>
</section>
<% content_for :footer do %>
  <%= render :partial => "shared/metrics/criteo/conversion_tracker", :locals => {:order => @order } %>
<% end %>
