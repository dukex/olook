.filter
  %p.title-category Modelo
  %ul.category-list
    - filters_by("categoria").each do |text, amount|
      %li= filter_link_to(build_link_path, :categoria, text.chomp, amount)

.filter
  %p.title-category Cores
  %ul.category-list.cores
    - filters_by("cor_filtro").each do |text, amount|
      %li{:class => text.chomp.downcase}= filter_link_to(build_link_path, :color, text.chomp, amount)

.filter
  %p.title-category Preço
  .price-range
    #min-value-label 0
    %input{type: "text", id: "min-value"}
    .slider
      #slider-range
    #max-value-label 0
    %input{type:"text", id:"max-value"}
    %input{type:"hidden", name:"price", id:"price"}
- if category == 'sapato'
  .filter
    %p.title-category Salto
    %ul.category-list
    - filters_by("heel").each do |text, amount|
      %li= filter_link_to(build_link_path, :care, text.chomp, amount)
    %p.title-category Conforto & Proteção
    %ul.subcategory-list
    - filters_by("care").each do |text, amount|
      %li= filter_link_to(build_link_path, :care, text.chomp, amount)
