- if category == 'roupa'
  - if ( _filters = subcategory_filters_by("Roupa", search, use_fields: [:category])) && _filters.present?
    .filter
      %p.title-category Roupas
      %ul.category-list
        - _filters.each do |text, amount|
          %li= filter_link_to(catalog_path(category, @url_builder.add_filter(:subcategory, text)), text.chomp, search.filter_selected?(:subcategory, text.chomp))
        %li= link_to("Limpar Filtro", catalog_path(category, @url_builder.remove_filter_of(:subcategory)), :class => "clean") if search.filter_value(:subcategory).present?
  - if ( _filters = subcategory_filters_by("Lingerie", search, use_fields: [:category])) && _filters.present?
    .filter
      %p.title-category Lingerie
      %ul.category-list
        - _filters.each do |text, amount|
          %li= filter_link_to(catalog_path(category, @url_builder.add_filter(:subcategory, text)), text.chomp, search.filter_selected?(:subcategory, text.chomp))
        %li= link_to("Limpar Filtro", catalog_path(category, @url_builder.remove_filter_of(:subcategory)), :class => "clean") if search.filter_value(:subcategory).present?
  - if ( _filters = subcategory_filters_by("Moda Praia", search, use_fields: [:category])) && _filters.present?
    .filter
      %p.title-category Moda Praia
      %ul.category-list
        - _filters.each do |text, amount|
          %li= filter_link_to(catalog_path(category, @url_builder.add_filter(:subcategory, text)), text.chomp.gsub(/ ?moda praia/i, ''), search.filter_selected?(:subcategory, text.chomp))
        %li= link_to("Limpar Filtro", catalog_path(category, @url_builder.remove_filter_of(:subcategory)), :class => "clean") if search.filter_value(:subcategory).present?

- else
  .filter
    %p.title-category Modelo
    %ul.category-list
      - filters_by("subcategory", search, use_fields: [:category]).each do |text, amount|
        %li= filter_link_to(catalog_path(category, @url_builder.add_filter(:subcategory, text)), text.chomp, search.filter_selected?(:subcategory, text.chomp))
      %li= link_to("Limpar Filtro", catalog_path(category, @url_builder.remove_filter_of(:subcategory)), :class => "clean") if search.filter_value(:subcategory).present?

- if search.filter_value('category').to_a.include?('sapato')
  .filter
    %p.title-category Salto
    %ul.category-list
      %li= filter_link_to(catalog_path(category, @url_builder.add_filter(:heel, '0-4')), 'Baixo (0cm - 4cm)', search.filter_selected?(:heel, '0-4'))
      %li= filter_link_to(catalog_path(category, @url_builder.add_filter(:heel, '5-9')), 'Médio (5cm - 9cm)', search.filter_selected?(:heel, '5-9'))
      %li= filter_link_to(catalog_path(category, @url_builder.add_filter(:heel, '10-18')), 'Alto (10cm - 18cm)', search.filter_selected?(:heel, '10-18'))
      %li= link_to("Limpar Filtro", catalog_path(category, @url_builder.remove_filter_of(:heel)), :class => "clean") if search.filter_value(:heel).present?

  .filter
    %p.title-category Conforto & Proteção
    %ul.subcategory-list
      - filters_by("care", search, use_fields: [:category]).each do |text, amount|
        %li= filter_link_to(catalog_path(category, @url_builder.add_filter(:care, text)), text.chomp, search.filter_selected?(:care, text.chomp))
      %li= link_to("Limpar Filtro", catalog_path(category, @url_builder.remove_filter_of(:care)), :class => "clean") if search.filter_value(:care).present?


.filter
  %p.title-category Cores
  %ul.category-list.cores
    - filters_by("color", search, use_fields: [:category]).each do |text, amount|
      %li{:class => text.chomp.parameterize}= filter_link_to(catalog_path(category, @url_builder.add_filter(:color, text)), text.chomp, search.filter_selected?(:color, text.chomp))
    %li= link_to("Limpar Filtro", catalog_path(category, @url_builder.remove_filter_of(:color)), :class => "clean") if search.filter_value(:color).present?
.filter.preco
  %p.title-category Preço
  .price-range
    %p#min-value-label{style:'background-image: none'} 0
    %p#max-value-label{style:'background-image: none'} 0
    .slider
      #slider-range
    %input{type: "text", id: "min-value"}
    %input{type:"text", id:"max-value"}
    %input{type:"hidden", name:"price", id:"price"}
  %ul.subcategory-list
    %li= link_to("Limpar Filtro", catalog_path(category, @url_builder.remove_filter_of(:price)), :class => "clean") if search.filter_value(:price).present?
- unless ['bolsa', 'sapato'].include?(category)
  .filter
    %p.title-category Marca
    %ul.category-list
      - filters_by('brand_facet', search, use_fields: [:category]).each do |text, amount|
        %li= filter_link_to(catalog_path(category, @url_builder.add_filter(:brand, text)), text.chomp.gsub('Ç', 'ç').downcase.titleize, search.filter_selected?(:brand, text.chomp))
      %li= link_to("Limpar Filtro", catalog_path(category, @url_builder.remove_filter_of(:brand)), :class => "clean") if search.filter_value(:brand).present?

- if (['sapato', 'roupa'] & search.filter_value('category').to_a).present?
  .filter
    %p.title-category Tamanho
    %ul.category-list
      - size_list(category, search, category[0].downcase).reverse.each do |text, amount|
        %li= filter_link_to(catalog_path(category, @url_builder.add_filter(:size, text)), format_size(text.chomp), search.filter_selected?(:size, text.chomp))
      %li= link_to("Limpar Filtro", catalog_path(category, @url_builder.remove_filter_of(:size)), :class => "clean") if search.filter_value(:size).present?

