.filter
  %p.title-category Modelo
  %ul.category-list
    - filters_by("categoria").each do |text, amount|
      %li= filter_link_to(build_link_path, :categoria, text.chomp, amount)

.filter
  %p.title-category Cores
  %ul.category-list.cores
    - filters_by("cor_filtro").each do |text, amount|
      %li{:class => text.chomp.downcase}= filter_link_to(build_link_path, :color, text.chomp, amount)

