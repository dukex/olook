.filter
  %p.title-category Modelo
  %ul.category-list
    - filters_by("subcategory").each do |text, amount|
      %li= filter_link_to(catalog_path(SeoUrl.build(search.filters_applied(:subcategory, text.chomp), params)), text.chomp, search.filter_selected?(:subcategory, text.chomp))

.filter
  %p.title-category Cores
  %ul.category-list.cores
    - filters_by("color").each do |text, amount|
      %li{:class => text.chomp.downcase}= filter_link_to(catalog_path(SeoUrl.build(search.filters_applied(:color, text.chomp), params)), text.chomp,search.filter_selected?(:color, text.chomp))

.filter
  %p.title-category Preço
  .price-range
    %p#min-value-label{style:'background-image: none'} 0
    %p#max-value-label{style:'background-image: none'} 0
    .slider
      #slider-range
    %input{type: "text", id: "min-value"}
    %input{type:"text", id:"max-value"}
    %input{type:"hidden", name:"price", id:"price"}

- if search.filter_value('category').to_a.include?('roupa')
  .filter
    %p.title-category Marca
    %ul.category-list
      - filters_by('brand_facet').each do |text, amount|
        %li= filter_link_to(catalog_path(SeoUrl.build(search.filters_applied(:brand, text.chomp), params)), text.chomp.gsub('Ç', 'ç').downcase.titleize, search.filter_selected?(:brand, text.chomp))

- if (['sapato', 'roupa'] & search.filter_value('category').to_a).present?
  .filter
    %p.title-category Tamanho
    %ul.category-list
      - filters_by('size').each do |text, amount|
        %li= filter_link_to(catalog_path(SeoUrl.build(search.filters_applied(:size, text.chomp), params)), text.chomp, search.filter_selected?(:size, text.chomp))

- if search.filter_value('category').to_a.include?('sapato')
  .filter
    %p.title-category Salto
    %ul.category-list
      %li= filter_link_to(catalog_path(SeoUrl.build(search.filters_applied(:heel, '0-4'), params)), 'Baixo (0cm - 4cm)', search.filter_selected?(:heel, '0-4'))
      %li= filter_link_to(catalog_path(SeoUrl.build(search.filters_applied(:heel, '5-9'), params)), 'Médio (5cm - 9cm)', search.filter_selected?(:heel, '5-9'))
      %li= filter_link_to(catalog_path(SeoUrl.build(search.filters_applied(:heel, '10-18'), params)), 'Alto (10cm - 18cm)', search.filter_selected?(:heel, '10-18'))

  .filter
    %p.title-category Conforto & Proteção
    %ul.subcategory-list
      - filters_by("care").each do |text, amount|
        %li= filter_link_to(catalog_path(SeoUrl.build(search.filters_applied(:care, text.chomp), params)), text.chomp, search.filter_selected?(:care, text.chomp))

