%p.title-category
  Modelo
%ul.subcategory-list
  - filters_by("categoria").each do |text, amount|
    %li= filter_link_to(build_link_path, :categoria, text.chomp, amount)

%p.title-category
  Cores
%ul.subcategory-list
  - filters_by("cor_filtro").each do |text, amount|
    %li= filter_link_to(build_link_path, :color, text.chomp, amount)

- if ['roupa', 'acessorio'].include? category
  %p.title-category
    Marcas
  %ul.subcategory-list
    - filters_by("brand_facet").each do |text, amount|
      %li= filter_link_to(build_link_path, :color, text.chomp.split(" ").map{|w| w.upcase}.join(" "), amount)

