- if search.has_any_filter_selected?
  %section.filters
    %p
      Você está em
      %span //
    %ul
      - search.selected_filters_for("subcategory").each do |sub|
        %li= current_seaction_link_to(catalog_path(SeoUrl.build(search.filters_applied(:subcategory, sub))), sub, search.filter_selected?(:subcategory, sub))

      - search.selected_filters_for("color").each do |col|
        %li= current_seaction_link_to(catalog_path(SeoUrl.build(search.filters_applied(:color, col))), col, search.filter_selected?(:color, col))

      - search.selected_filters_for("heel").each do |hee|
        %li= current_seaction_link_to(catalog_path(SeoUrl.build(search.filters_applied(:heel, hee))), hee, search.filter_selected?(:heel, hee))

      - search.selected_filters_for("care").each do |car|
        %li= current_seaction_link_to(catalog_path(SeoUrl.build(search.filters_applied(:care, car))), car, search.filter_selected?(:care, car))

      %li.clean= link_to "(limpar filtros)", catalog_path(parameters: search.filter_value("category").first.to_s)

