.exhibition-mode
  = form_tag catalog_path(parameters: params[:parameters]), method: 'get' do
    %fieldset
      %p{class: unless params[:por] == '0' then 'selected_relevance watermelon' else 'selected_relevance' end}
        ORDENAÇÃO:
        %span Relevância
      = select_tag('por', options_for_select({"Nossa seleção" => 0, "Menor preço" => "menor-preco", "Maior preço" => "maior-preco", "Maior Desconto" => "maior-desconto"}, :selected => params[:por]), :class => "custom_select #{'watermelon' unless params[:por] == '0'}", :onchange => ("$(this).parents('form').submit();"))

  .pagination.topo
    = render partial: "/shared/nav_bar_pagination", locals: { search: @search, link: catalog_path, other_parameters: "por=#{ params[:por]}" }

