.exhibition-mode
  = form_tag catalog_path(parameters: params[:parameters]), method: 'get' do
    %fieldset
      %span.label ORDENAÇÃO:
      %p{class: "selected_relevance#{' watermelon' if params[:por].present? && params[:por].to_s != '0'}" }
        %span NOSSA SELEÇÃO
      = select_tag('por', options_for_select({"NOSSA SELEÇÃO" => 0, "MENOR PREÇO" => "menor-preco", "MAIOR PREÇO" => "maior-preco", "MAIOR DESCONTO" => "maior-desconto"}, :selected => params[:por]), :class => "custom_select", :onchange => ("$(this).parents('form').submit();"))

  .pagination.topo
    = render "shared/nav_bar_pagination", search: search, url_builder: url_builder, link: lambda{ |hash| catalog_path(params[:category], url_builder.current_filters.merge({por:params[:por]}).merge(hash)) }

