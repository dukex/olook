<% content_for :head do %>
  <%= stylesheet_link_tag "section/gift" %>
<% end %>

<% content_for :footer do %>
  <%= javascript_include_tag "gift" %>
<% end %>

<% content_for :full do %>
  <div class="content" id="occasion">
    <%= form_tag '/gift/occasions/create' do |f| %>
      <%= hidden_field :recipient, :facebook_uid %>
      <p>Você esta criando um presente de <%= collection_select :occasion, :gift_occasion_type, @occasion_types, :id, :name, :prompt => 'Escolha' %>, para <%= text_field :recipient, :name %>, que é minha <%= collection_select :recipient, :gift_recipient_relation, @recipient_relations, :id, :name, :prompt => 'Escolha' %>, e é comemorado no dia <%= select_day Date.today, :field_name => 'day', :prefix => 'occasion', :prompt => 'Dia' %> de <%= select_month Date.today, :field_name => 'month', :prefix => 'occasion', :prompt => 'Mês' %>.</p>
    <% end %>
  </div>
<% end %>

<div id="occasion_new" class="content">
  <%#= render "gift/shared/calendar" %>
</div>
