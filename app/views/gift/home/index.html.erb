<% content_for :head do %>
  <%= stylesheet_link_tag "section/gift" %>
    <meta name="chaordic:source" content="home/presentes">
    <meta name="chaordic:user" content= <%= @chaordic_user %>>
    <meta name="chaordic:category" content="Presentes" >


    <meta property="fb:app_id" content="<%= FACEBOOK_CONFIG["app_id"] %>" />
    <meta property="og:title" content="ACERTE EM CHEIO NO PRESENTE" />
    <meta property="og:description" content="Encontre o presente ideal para as mulheres da sua vida através da nossa ferramenta de presentes." />
    <meta name="Description" content="Comprando o presente através deste link você terá 10% de desconto e embalagem de presente grátis. #ficaadica">
    <meta property="og:image" content="http:<%= image_path('gift/imagem_presentes_facebook.jpg') %>" />

<% end %>

<% content_for :footer do %>
  <%= javascript_include_tag "gift" %>
<% end %>

<% content_for :full do %>
  
  <div id="fb-root"></div>

  <div id="banner" data-coupon-code="<%= Setting.valentines_day_coupon_code %>">
    <%= link_to image_tag("gift/presentes_full_banner__indecisos_dia_dos_namos.jpg"), "#" %>
  </div>


  <%= render "profiles" %>

  <% @profiles.each do |profile| %>
    <section id="profile_products" class="sub <%= profile %>">
      <%= render "profile_products", products: @profiles_products	[profile.to_sym], profile: profile %>
    </section>
  <% end %>

  <%= render "suggestions" %>
  <%= render "suggestion_products" %>
  <%= render "quiz" %>
  <%= render "calendar" %>
<% end %>
