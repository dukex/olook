<div id="birthdays_list">
  <% if friends.any? %>
    <ul>
      <% friends.each do |friend| %>
        <li>
          <div class="mask">
            <%= image_tag user_avatar(friend, "square"), :title => friend.name %>
            <p><%= friend.first_name %></p>        
          </div>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
