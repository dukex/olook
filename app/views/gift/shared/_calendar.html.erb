<div id="calendar_container">
  <% unless user_signed_in? %>
    <div class="opacity"></div>
  <% end %>
  <div class="title">
    <h1>Meu Calend√°rio</h1>
  </div>
  <div id="calendar" class="connected">
    <ul id="months">
      <li class="first"><%= link_to "Jan", "#", :rel => "january" %></li>
      <li><%= link_to "Fev", "#", :rel => "february" %></li>
      <li><%= link_to "Mar", "#", :rel => "march" %></li>
      <li><%= link_to "Abr", "#", :rel => "april", :class => "selected" %></li>
      <li><%= link_to "Mai", "#", :rel => "may" %></li>
      <li><%= link_to "Jun", "#", :rel => "june" %></li>
      <li><%= link_to "Jul", "#", :rel => "july" %></li>
      <li><%= link_to "Ago", "#", :rel => "august" %></li>
      <li><%= link_to "Set", "#", :rel => "september" %></li>
      <li><%= link_to "Out", "#", :rel => "october" %></li>
      <li><%= link_to "Nov", "#", :rel => "november" %></li>
      <li class="last"><%= link_to "Dez", "#", :rel => "december" %></li>
    </ul>
    <%= render "gift/shared/friends_list", :friends => @friends %>
  </div>
  <%= link_to "Amigos do Facebook", "#", :id => "connect_facebook" %>
</div>
