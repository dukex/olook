<% content_for :head do %>
  <%= stylesheet_link_tag "section/gift" %>
  <%= stylesheet_link_tag "section/suggestions" %>
<% end %>

<% content_for :footer do %>
  <%= javascript_include_tag "gift/suggestions" %>
  <%= render "shared/metrics/metaffiliation/action", :email => current_user ? current_user.email : 1 %>
  <%= render "shared/metrics/adlead/adlead_gift", :email => current_user ? current_user.email : 1%>
<% end %>

<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/pt_BR/all.js#xfbml=1&appId=<%= @facebook_app_id %>";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<% content_for :full do %>
  <div class="full_bg">
    <div class="content" id="suggestion">
      <div id="card">
        <%= render "card" %>
      </div>
      <div id="profile">
        <%= image_tag "/assets/gift/suggestions/#{@profile.name.parameterize}.jpg", :title => "#{@profile.name}", :class => "profile" %>
        <%= link_to "Alterar", edit_gift_recipient_path(@gift_recipient) %>
      </div>
      <%= form_tag "/sacola/add_products_to_gift_cart" do %>
        <section id="products">
          <p class="discount off20">Ganhe 20% de desconto no segundo presente</p>
          <p class="discount off40">Ganhe 40% de desconto no terceiro presente</p>
          <div class="product_container first">
            <ul>
              <%= render "shared/suggestive_product", :position => 0, :variant => @suggested_variants[0] %>
            </ul>
          </div>
          <div class="product_container second">
            <ul>
              <%= render "shared/suggestive_product", :position => 1, :variant => @suggested_variants[1] %>
            </ul>
          </div>
          <div class="product_container third">
            <ul>
              <%= render "shared/suggestive_product", :position => 2, :variant => @suggested_variants[2] %>
            </ul>
          </div>
        </section>
        <ul class="product_actions">
          <li><%= link_to "Quero escolher outros produtos", "#", :class => "more_suggestions" %></li>
          <li><%= submit_tag "Adicionar presente(s) à sacola" %></li>
        </uL>
      <% end %>
      <section id="suggestions_container">
        <h1>Outras sugestões</h1>
        <ul>
          <% @products.each do |product| %>
            <%= render "shared/showroom_product_item", :product => product, :gift => true, :shoe_size => @gift_recipient.shoe_size %>
          <% end %>
        </ul>
      </section>
    </div>
  </div>
<% end %>

<div id="quick_view">
</div>
