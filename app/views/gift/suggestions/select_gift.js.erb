$("#products .product_container").each(function(index) {
  if($(this).find("ul").html() == "") {
    InitSuggestion.slideTo("#products");
    switch(index) {
      case "1" :
        $(this).find("ul").html("<%= escape_javascript(render :partial => 'shared/suggestive_product', :locals => {:product => @product, :position => 1}) %>").fadeIn();
        break;
      case "2" :
        $(this).find("ul").html("<%= escape_javascript(render :partial => 'shared/suggestive_product', :locals => {:product => @product, :position => 2}) %>").fadeIn();
        break;
      default :
        $(this).find("ul").html("<%= escape_javascript(render :partial => 'shared/suggestive_product', :locals => {:product => @product, :position => 0}) %>").fadeIn();
    }
    return false;
  }
});
