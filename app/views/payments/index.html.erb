<% content_for :head do %>
  <%= stylesheet_link_tag "section/checkout" %>
<% end %>

<section id="payment" class="checkout">
  <section class="main">
    <h1>Escolha uma forma de pagamento</h1>
    <%= link_to "Boleto Bancário", new_billet_path %>
    <%= link_to "Débito Bancário", new_debit_path %>
    <%= link_to "Cartão de Crédito", new_credit_card_path %>
  </section>
  <section class="sidebar">
    <% content_for :checkout_sidebar do %>
      <%= render :partial => "shared/payments/info_address" %>
    <% end %>
    <%= render :partial => "shared/payments/info_sidebar" %>
    <%= submit_tag '', :disabled => "disabled", :class => "disabled save" %>
  </section>
</section>
