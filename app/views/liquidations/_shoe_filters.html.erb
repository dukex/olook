<div class="filter">
  <h1 class="shoes">Sapatos</h1>
  <ol>
    <li>
      <%= check_box_tag "select_all_shoes", "", false, :class => "select_all" %>
      <%= label_tag "select_all_shoes", "Todos os sapatos" %>
    </li>

<% liquidation_presenter.liquidation.shoes.each do |shoe, label| %>
    <li>
      <%= check_box_tag('shoe_subcategories[]', shoe, params[:shoe_subcategories] && params[:shoe_subcategories].include?(shoe), :id => shoe) %>
      <%= label_tag(label, nil, :for => shoe) %>
    </li>
<% end %>
  </ol>
</div>




