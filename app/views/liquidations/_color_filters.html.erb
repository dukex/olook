<div class="filter main">
  <h1>Cores</h1>
  <ol class="color_filter">
    <li>
      <%= check_box_tag "select_all_colors", 1, params[:select_all_colors], :class => "select_all" %>
      <%= label_tag "select_all_colors", "Todos as cores" %>
    </li>
  <% {'neutras' => 'Neutras', 'metalizadas' => 'Metalizadas', 'tons-pastel' => 'Tons Pastel', 'vivas' => 'Vivas'}.each do |subcategory,label| %>
    <li class="<%= subcategory %>">
      <%= check_box_tag 'color_categories[]', subcategory, params[:color_categories] && params[:color_categories].include?(subcategory), id: subcategory %>
      <%= label_tag label, nil, for: subcategory %>
    </li>
  <% end %>
  </ol>
</div>




