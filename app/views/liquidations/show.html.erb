<% present 'Liquidation', :liquidation => @liquidation do |liquidation_presenter| %>
  <% content_for :head do %>
    <%= stylesheet_link_tag "section/liquidations" %>
  <% end %>

  <% content_for :footer do %>
    <%= javascript_include_tag "liquidations" %>
  <% end %>

  <% content_for :full do %>
    <div class="content">
      <%= liquidation_presenter.render_top %>
    </div>
  <% end %>

  <div id="liquidation" class="content">

    <%= liquidation_presenter.render_search_form %>

    <div id="products_container">
      <div id="shoe_size_filter">
        <%= label_tag "Mostrar nÃºmeros:" %>
        <span><%= current_user.shoes_size if current_user && current_user.shoes_size %></span>
        <div class="sizes">
          <ul>
            <% liquidation_presenter.liquidation.resume[:shoe_sizes].each do |key, value| %>
              <li>
                <% if current_user && current_user.shoes_size %>
                  <%= check_box_tag('shoe_sizes_filter[]', key, (key == current_user.shoes_size.to_s ? true : false), :id => "size_#{key}") %>
                <% else %>
                  <%= check_box_tag('shoe_sizes_filter[]', key, false, :id => "size_#{key}") %>
                <% end %>
                <%= label_tag(value, nil, :for => "size_#{key}") %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
      <%= render "shared/filters/order" %>
      <ul id="products">
        <%= render "products", :products => @liquidation_products %>
      </ul>
      <div class="loading"></div>
      <%= will_paginate @liquidation_products %>
    </div>
  </div>
  <% end %>
