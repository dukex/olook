<% content_for :head do %>
  <%= stylesheet_link_tag "section/liquidations" %>
<% end %>

<% content_for :footer do %>
  <%= javascript_include_tag "liquidations" %>
<% end %>

<% content_for :full do %>
  <div class="content">
    <h1>Olooket</h1>
    <h2>At√© 70% de desconto</h2>
    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam quis leo metus, quis feugiat odio. Quisque adipiscing faucibus ligula, nec fringilla ligula ultricies ut.</p>
    <%= render "carousel" %>
  </div>
<% end %>

<div id="liquidation" class="content">
  <div id="filters">
    <p>Filtros</p>
    <%= form_for("", :html => {:id => "liquidation_order_filter"}) do %>
      <%= select_tag('order_filter', options_for_select({"ab" => 1, "fo" => 2})) %>
    <% end %>

    <%= form_for(update_liquidation_path, :url => update_liquidation_path, :method => :get, :remote => true, :html => {:id => "liquidation_filter"}) do %>
    <fieldset class="inputs">
      <ol>
        <li>
          <label>0</label>
          <%= check_box_tag('heels[]', 0) %>
          <label>6.5</label>
          <%= check_box_tag('heels[]', 6.5) %>
        </li>
      </ol>
      <ol>
        <li>
          <label>33</label>
          <%= check_box_tag('show_sizes[]', 33) %>
          <label>34</label>
          <%= check_box_tag('show_sizes[]', 34) %>
        </li>
      </ol>
      <ol>
        <li>
          <label>Subcategoria 1</label>
          <%= check_box_tag('subcategories[]', 1) %>
        </li>
        <li>
          <label>Subcategoria 2</label>
          <%= check_box_tag('subcategories[]', 2) %>
        </li>
        <li>
          <%= submit_tag "Buscar" %>
        </li>
      </ol>
    </fieldset>
    <% end %>
  </div>
  <div id="products_container">
    <ul id="products">
      <%= render "products", :products => @products %>
    </ul>
    <%= will_paginate @products %>
  </div>
</div>
