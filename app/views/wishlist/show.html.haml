- content_for :footer do
  = javascript_include_tag "wishlist"
= first_level_breadcrumb("Favoritos")
#wishlist
  %h1 
    Eu Quero!
    %span
      = "#{current_user.first_name}, seus produtos favoritos estÃ£o aqui!"

  - @wishlist.wished_products.each do |wp|
    %div.product
      %div.img
        = link_to 'remover', '', :class => 'removeFromWishlist', :title => "Remover dos meus favoritos!", :id => "js-removeFromWishlistButton", :data => {product_id: wp.product_id}
        - data = get_label_and_class_name(@cart, wp)
        = link_to data[:label], '#', :class => "#{data[:class_name]} js-imgAddToCart", :data => {cart_id: @cart.id, variant: wp.variant.number}
        - product = wp.variant.product
        .async{data: {product: product.catalog_picture, backside_picture: product.backside_picture, product: product.catalog_picture}}
      %h2
        = product.name
      %h3
        = product.brand
      %div.value
        R$ 
        = product.retail_price
      %ul.size
        - order_variants_by_size(product.variants).each do |variant|
          - if variant.number == wp.variant.number
            %li.selected= variant.description
      %a.seeMoreDetails
