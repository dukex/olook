  <script type="text/javascript">
      if(window.opener) {
        window.close();
        window.opener.location = '<%= @redirect_uri %>';
      }
  </script>

<% end %>

<h1>Gata, bem-vinda</h1>

<ul>
  <li><%= link_to "Convide suas amigas", member_invite_path %></li>
  <% unless current_user.has_facebook? %>
    <li><%= link_to "Associe sua conta do Facebook", user_omniauth_authorize_path(:facebook) %></li>
  <% end %>
</ul>

<%= render :partial => 'invites', :locals => {:member => @member} if @member %>
