<div id="cart-box">
  <div class="products">
    <table cellpadding="0" cellspacing="0" class="items_list" id="items">
      <tbody>
        <% @cart.items.each do |item| %>
          <%= render partial: 'cart/items/checkout_row', locals: { cart_service: @cart_service, item: item } if item %>
        <% end %>
      </tbody>
    </table>
  </div>
  <ul class="subtotal">
    <li><span class="txt-black">SUBTOTAL: </span><span class="txt-pink"><%= number_to_currency(@cart_service.subtotal) %></span></li>
    <li><span class="txt-black">FRETE: </span><span id="freight_price"><%= number_to_currency(freight_for(address)[:price]) if address && address.zip_code %></span></li>
    <li><span class="txt-black">CRÉDITOS: </span><span id="credits_used"><%= number_to_currency(@cart_service.total_credits_discount) %></span></li>
  </ul> 
  <p class="total">
    <span class="txt-black">TOTAL: </span>
    <span class="txt-pink" id="total"><%= number_to_currency(@cart_service.total) %></span><br />
    <span class="frete" id="delivery_time"><%= "(entrega em #{freight_for(address)[:delivery_time]} dias úteis)" if address && address.zip_code %></span>
  </p> 
</div>
