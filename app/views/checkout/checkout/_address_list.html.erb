<% addresses.each do |address| %>
  <%= field_set_tag do %>
    <%= radio_button :address, 'id', address.id, class: "address_recorded", id: "", checked: (address.id == selected_address.id), onclick:"retrieve_freight_price('#{address.zip_code}');" %>
    <%= label_tag :address, '', class: "address_label" %>
    <ul class="address_data">
      <li><%= "#{address.first_name} #{address.last_name}" %></li>
      <li><%= "#{address.street}, #{address.number}" %></li>
      <li><%= "#{address.neighborhood} - #{address.zip_code}" %></li>
      <li><%= "#{address.city}, #{address.state}" %></li>
      <li><%= link_to "Alterar endereço", edit_checkout_address_path(address), remote: true %></li>
    </ul>
  <% end %>
<% end %>
<% if @user.addresses && @user.addresses.select{|address| address.id }.any?  %>
<p class="new_address"><%= link_to "+ Adicionar novo endereço", new_checkout_address_path, remote: true %></p>
<% end %>