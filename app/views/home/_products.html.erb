<ul class="products_list">
  <% products.each do |product| %>
    <li>
      <%= link_to product do %>
        <%= image_tag(product.send(image_method ||= :showroom_picture) || "fake/showroom-product.png", :alt => product.name) %>
        <h1><%= product.name %></h1>
        <p><%= number_to_currency product.price %></p>
      <% end %>
    </li>
  <% end %>
</ul>
