- content_for :head do
  = stylesheet_link_tag "section/home"
  %meta{:content => "home", :name => "chaordic:source"}/
  %meta{:content => @chaordic_user, :name => "chaordic:user"}/
%section#home
  %section#looks
    - @looks.each do |look|
      = link_to(image_tag(look.front_picture.showroom.url, data: { hover: look.full_look_picture.showroom.url }, class: 'js-change-pic-onhover'), product_path(look.product))
  %section#products
    - @products.each do |product|
      = render 'shared/lite_product_item', product: product

  %section#blogs
  \--------------------------------------------OLD----------------------
  \#{link_to "Olook na imprensa", press_path, id: "press"}
  \#{render "home/stylists"}
  \#{render "home/brands"}
  .chaordic.rec4you
  = render "home/boxes"
  = render "home/products_categories"
= render partial: 'shared/metrics/criteo/home'
