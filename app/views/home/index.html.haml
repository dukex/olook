- content_for :head do
  = stylesheet_link_tag "section/home"
  %meta{:content => "home", :name => "chaordic:source"}/
  %meta{:content => @chaordic_user, :name => "chaordic:user"}/
- content_for :footer do
  = javascript_include_tag "section/lite_home"

%section#home

  #banner
    .column
      - if @left_highlight && @left_highlight.image_for_position
        = link_to @left_highlight.link, onclick: track_event("Home", "ClickHighlight", "left") do
          = image_tag @left_highlight.image_for_position, alt: @left_highlight.alt_text, title: @left_highlight.alt_text
          %h2 
            = @left_highlight.title
            %span= @left_highlight.subtitle
    .column.big
      - if @center_highlight && @center_highlight.image_for_position
        =link_to @center_highlight.link, onclick: track_event("Home", "ClickHighlight", "center") do
          =image_tag @center_highlight.image_for_position, alt: @center_highlight.alt_text, title: @center_highlight.alt_text
          %h2 
            = @center_highlight.title
            %span= @center_highlight.subtitle
    .column
      - if @right_highlight && @right_highlight.image_for_position
        =link_to @right_highlight.link, onclick: track_event("Home", "ClickHighlight", "right") do
          =image_tag @right_highlight.image_for_position, alt: @right_highlight.alt_text, title: @right_highlight.alt_text
          %h2 
            = @right_highlight.title
            %span= @right_highlight.subtitle
  - if current_user.nil? || current_user.half_user?
    = render "unlogged_page"
  - else
    = render "logged_page"
  %section#week_highlights
    = render "home/week_highlights"
    .favTip
