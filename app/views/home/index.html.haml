- content_for :head do
  = stylesheet_link_tag "section/home"
  %meta{:content => "home", :name => "chaordic:source"}/
  %meta{:content => @chaordic_user, :name => "chaordic:user"}/
- content_for :footer do
  = javascript_include_tag "section/lite_home"

%section#home
  #banner
    .column
      - left_highlight = @highlights.select{|h| h.position == 2}.last
      =link_to left_highlight.link do
        =image_tag left_highlight.left_image, alt: left_highlight.alt_text, title: left_highlight.alt_text
        %h2 
          = left_highlight.title
          %span= left_highlight.subtitle
    .column.big
      - center_highlight = @highlights.select{|h| h.position == 1}.last
      =link_to center_highlight.link do
        =image_tag center_highlight.image, alt: center_highlight.alt_text, title: center_highlight.alt_text
        %h2 
          = center_highlight.title
          %span= center_highlight.subtitle
    .column
      - right_highlight = @highlights.select{|h| h.position == 3}.last
      =link_to right_highlight.link do
        =image_tag right_highlight.right_image, alt: right_highlight.alt_text, title: right_highlight.alt_text
        %h2 
          = right_highlight.title
          %span= right_highlight.subtitle
  #looks
    %h3
      meus looks
      =link_to "consulte seu perfil", "teste"
    .mylook
      - @looks.each_with_index do |look,idx|
        .look{class: ('last' if idx == 3)}= link_to image_tag(look.front_picture.showroom.url, data: { hover: look.full_look_picture.showroom.url }), product_seo_url(look.product.seo_path)
  #see_too
    %h4
      Veja Tamb√©m
    %ul#carousel.elastislide-list
      - @products.each do |product|
        %li
          =link_to image_tag(product.front_picture.try(:image_url), data: { hover: product.full_look_picture.try(:image_url) }), product_seo_url(product.seo_path)
          %span= number_to_currency(product.retail_price)
  %section#week_highlights
    %h4 
      %span s
      tylist 
      %span n
      ews
    = render "home/week_highlights"
