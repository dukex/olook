<% content_for :head do %>
  <%= stylesheet_link_tag "section/home" %>
<% end %>

<% content_for :footer do %>
  <%= javascript_include_tag "home" %>
<% end %>

<div class="home">
  <section class="model">
    <ul class="model">
      <li><img src="/assets/home/model-um.gif" alt=""></li>
    </ul>

  </section>

  <section class="call">
    <p class="line-one">Encontraremos o</p>
    <p class="line-two">estilo perfeito</p>
    <p class="line-three">para você.</p>
  </section>

  <section class="steps">
    <ul>
      <li class="one"><strong>1</strong> <span>Conte-nos sobre seus gostos e preferências</span></li>
      <li class="two"><strong>2</strong> <span>Nossos stylists montam sua vitrine</span></li>
      <li class="three"><strong>3</strong> <span>Você escolhe seu <b>sapato, bolsa ou acessório</b></span></li>
    </ul>
  </section>

  <section class="making_of">
    <%= link_to "Video", "#", :rel => "http://youtu.be/edo-jggwD-4", :class => "open_making_of" %>
    <div class="video_description">
      <h1>Making of - Coleção de junho</h1>
      <%= link_to "Gostou? Descubra o seu estilo e veja a coleção completa", new_survey_path, :class => "home" %>
    </div>
    <p>Coleção de maio <span>Confira o making of</span></p>
  </section>
  <%= link_to 'Comece aqui e descubra seu estilo. É grátis!', new_survey_path, :class => "start" %>
  <%= render 'shared/facebook_like_button' %>

</div>
