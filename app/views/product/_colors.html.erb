            <div class="line color">
              <p>Cor:</p>
              <ol class="colors">
                <li><%= image_tag product.color_sample.url || 'fake/no-color.png', :title => product.name %></li>
                <% product.colors.each do |related_product| %>
                  <li>
                    <%= link_to image_tag(related_product.color_sample.url || 'fake/no-color.png', :title => related_product.name), related_product %>
