<div class="description">
  <div class="line">
    <h1><%= @product.name %></h1>
  </div>
  <div class="line">
    <div class="fb-like" data-href="http://<%= request.host %>/produto/<%= @product.id %>" data-send="false" data-layout="button_count" data-width="110" data-show-faces="false"></div>
    <ul class="social">
      <li class="first">compartilhe:</li>
      <li class="twitter"><%= link_to "Tweetar", "https://twitter.com/intent/tweet?text=#{twit_description(@product)}&hashtags=ficaadica" %></li>
      <li class="facebook"><%= link_to "Facebook", "#" %></li>
      <li class="pinterest">
        <%= link_to "Pinterest", "http://pinterest.com/pin/create/button/?url=http://#{request.host}/produto/#{@product.id}&media=#{@product.pictures.first.image_url(:main).to_s}&description=#{@product.description}", :class => "pin-it-button", :"count-layout" => "none" %>
      </li>
      <li class="email last"><%= link_to "Email", "#" %></li>
    </ul>
  </div>
  <p class="description"><%= @product.description %></p>
  <%= product_presenter.render_price %>
  <% if @user && !@promotion %>
    <div class="warn_discount <%= product_presenter.is_promotion? ? 'promotion' : '' %>">
      <p>E você ganha até <%= number_to_currency LoyaltyProgramCreditType.apply_percentage(@product.retail_price) %> de desconto na próxima compra.</p>
      <%= link_to "Saiba mais", "#", :class => "open_loyalty_lightbox" %>
    </div>
  <% end %>
</div>
