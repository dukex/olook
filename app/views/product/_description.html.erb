<div class="description">
  <div class="line">
    <h1><%= @product.formatted_name(200) %></h1>
  </div>
  <div class="line">
    <div class="fb-like" data-href="http://<%= request.host_with_port %>/produto/<%= @product.id %>" data-send="false" data-layout="button_count" data-width="110" data-show-faces="false"></div>
    <ul class="social">
      <li class="first">compartilhe:</li>
      <li class="twitter"><%= link_to "Tweetar", "https://twitter.com/intent/tweet?text=#{share_description(@product)}&hashtags=ficaadica" %></li>
      <li class="facebook"><%= link_to "Facebook", "#" %></li>
      <li class="pinterest"><%= link_to "Pinterest", product_presenter.display_main_picture, :class => "pin-it-button", :"count-layout" => "none" %></li>
      <li class="email last"><%= link_to "Email", "#" %></li>
    </ul>
  </div>
  <p class="description"><%= @product.description %></p>
  <%= product_presenter.render_price_for @cart %>
  <%# if @user && !@promotion %>
    <div class="warn_discount <%= product_presenter.is_promotion? ? 'promotion' : '' %>">
      <p>Compre e ganhe até <span><%= number_to_currency LoyaltyProgramCreditType.apply_percentage(@product.retail_price) %></span> em créditos </br> para usar nos próximos 2 meses</p>
      <%= link_to "Saiba mais", "#", :class => "open_loyalty_lightbox" %>
    </div>
  <%# end %>

</div>

