<div class="description">
  <h1><%= @product.name %></h1>
  <div class="fb-like" data-href="http://<%= request.host %>/produto/<%= @product.id %>" data-send="false" data-layout="button_count" data-width="110" data-show-faces="false"></div>
  <p class="description"><%= @product.description %></p>
  <%= product_presenter.render_price %>
  <% if @user %>
    <div class="warn_discount <%= product_presenter.is_promotion? ? 'promotion' : '' %>">
      <p>E você ganha até <%= number_to_currency LoyaltyProgramCreditType.apply_percentage(@product.retail_price) %> de desconto na próxima compra.</p>
      <%= link_to "Saiba mais", member_loyalty_path %>
    </div>
  <% end %>
</div>
