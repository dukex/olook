<% if related_products.any? %>

  <div id="related">
    <h1 class="title">VOCÊ TAMBÉM PODE GOSTAR...</h1>
    <ul class="<%= related_products.count > 3 ? 'carousel' : '' %>">
      <%
          related_products.each do |product|
        if product.liquidation?
      %>
    <%= render "shared/promotion_product_item", :liquidation_product => LiquidationProductService.liquidation_product(product), :image_method => 'suggestion_picture' %>
  <% else %>
    <%= render "shared/product_item", :product => product, :image_method => 'suggestion_picture' %>
  <% end
      end
    %>
</ul>
<% if related_products.count > 3 %>
  <%= link_to "Anterior", "javascript:void(0);", :class => "carousel-prev" %>
  <%= link_to "Próximo", "javascript:void(0);", :class => "carousel-next" %>
<% end %>
<div id="related_footer"></div>
</div>
<% end %>
