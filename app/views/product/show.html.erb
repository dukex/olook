<% present 'Product',
           product: @product,
           member: @user,
           facebook_app_id: @facebook_app_id,
           shoe_size: @shoe_size,
           :logged? => user_signed_in?,
           :gift? => false,
           :only_view? => @only_view do |product_presenter|
%>
  <% content_for(:head) do %>
    <meta property="fb:app_id" content="<%= @facebook_app_id %>" />
    <meta property="og:title" content="Olook â€“ <%= @product.name %>" />
    <meta property="og:description" content="<%= @product.description %>" />
    <meta property="og:image" content="<%= @product.suggestion_picture.to_s %>" />
    <meta property="og:url" content="<%= "#{@url}/produto/#{@product.id}" %>" />
    <meta property="og:site_name" content="Olook" />
    <meta property="og:type" content="website" />
    <script type="text/javascript" src="//assets.pinterest.com/js/pinit.js"></script>
    <%= stylesheet_link_tag "section/product" %>
  <% end %>

  <% content_for :footer do %>
    <%= javascript_include_tag "product" %>
  <% end %>

  <% unless user_signed_in? %>
    <%= render "shared/modal_login" %>
  <% end %>

  <div id="product">
    <%= product_presenter.render_member_showroom if user_signed_in? %>
    <div class="content">
      <div id="pics_suggestions">
        <%= product_presenter.render_pics %>
        <%= product_presenter.render_facebook_comments %>
      </div>
      <div id="infos">
        <%= product_presenter.render_description %>
        <%= product_presenter.render_add_to_cart %>
        <%= product_presenter.render_details %>
      </div>

      <%= product_presenter.render_related_products %>
      <%# Banner placeholder %>
    </div>
  </div>
<% end %>
<% content_for :footer do %>
  <%= render partial: "shared/metrics/sociomantic/product", :locals => { product_id: @product.id } %>
  <%= render partial: "shared/metrics/criteo/product_page_tracker", :locals => { product_id: @product.id } %>
  <%= render "shared/metrics/google/product" %>
  <%= render "facebook_js", :facebook_app_id => @facebook_app_id, :product => @product %>
<% end %>
