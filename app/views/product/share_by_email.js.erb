var name = $("input#name_from").val(), email = $("#email_from").val(), to = $("#emails_to_deliver").val();
if(name == "" || email == "" || to == ""){
   $(".msg").removeClass("success").text("Precisamos das informações abaixo para enviar a recomendação").fadeIn();
}else if(email.indexOf("@") < 0 || to.indexOf("@") < 0){
   $(".msg").removeClass("success").text("Precisamos das informações abaixo para enviar a recomendação").fadeIn();
}else{
   $(".msg").addClass("success").text("Sua recomendação foi enviada com sucesso!").fadeIn();
   $("#compartilhar_email form input.fields").val("");
}
