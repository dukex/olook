var name = $("input#name_from").val(),
    email = $("#email_from").val(),
    to = $("#emails_to_deliver").val();

if(name == "" || email == "" || to == ""){
   $(".msg").addClass("error").fadeIn().find("p").text("Precisamos das informações abaixo para enviar a recomendação");
   $("#compartilhar_email input#send").removeClass("opacidade").removeAttr('disabled', false);
}else if(email.indexOf("@") < 0 || to.indexOf("@") < 0){
   $(".msg").addClass("error").fadeIn().find("p").text("Precisamos das informações abaixo para enviar a recomendação")
   $("#compartilhar_email input#send").removeClass("opacidade").removeAttr('disabled', false);
}else{
   $(".msg").removeClass("error");
   $("#compartilhar_email form .fields").val("");
   $("#compartilhar_email input#send").removeClass("opacidade").removeAttr('disabled', false);
   $(".close").click();
}
