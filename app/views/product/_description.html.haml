#product-info.pl9
  %h1= @product.formatted_name(200)
  %h2= @product.brand
  = product_presenter.render_price_for @product_discount_service
  - unless @product.promotion?
    %p.plots
      ou em #{installments(@product.price)}
  - if current_user && !current_user.reseller && params[:action] != "spy"
    %div{:class => "warn_discount #{product_presenter.is_promotion? ? 'promotion' : ''}"}
      %p
        Compre e ganhe #{number_to_currency LoyaltyProgramCreditType.apply_percentage(@product.retail_price)} em créditos,
        \#{link_to "saiba mais", "javascript:void(0);", :class => "open_loyalty_lightbox"}
  .delivery
    .garantido
      Entrega garantida até 24/12. 
      = link_to 'Consulte seu CEP', '#', class: 'consultaCepGarantido'
      %span
        * Para compras até dia 22/12 e efetuadas com cartão de crédito.
      .formDelivery{method:'post'}
        %p Informe o CEP e consulte o prazo para destino
        %form#shipping
          %input#cepDelivery{type:'text'}
          %input#search{type:'button', value:'PESQUISAR'}
        %p{class:'shipping-msg'}
          Quando for um CEP válido!
