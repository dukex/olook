<div id="pics_suggestions">
  <ul id="thumbs">
    <% @product.pictures.each do |picture| %>
      <li><%= link_to image_tag(picture.image_url(:thumb).to_s), "javascript:void(0);", :rel => "product_#{picture.id}", :class=>"load-async-#{picture.id}" %></li>
    <% end %>
  </ul>
  <div id="full_pic">
    <p class="warn <%= (@product.sold_out? && user_signed_in?) ? 'sold_out' : '' %>">ESGO<br />TADO</p>
    <% if @product.liquidation? && !@product.sold_out? && @product.liquidation_discount_percent.to_i != 0 %>
      <p class="warn percentage"><span><%= @product.liquidation_discount_percent.to_i %>%</span><br />off</p>
    <% end %>
    <% if current_user && @product.quantity(current_user.user_info.shoes_size) > 0 && @product.quantity(current_user.user_info.shoes_size) < 4 %>
      <p class="warn quantity">SÃ³<br />mais<br /><span><%= "#{(current_user.user_info.nil?) ? '' : @product.quantity( current_user.user_info.shoes_size )}" %></span></p>
    <% end %>
    <ul>
      <% @product.pictures.each do |picture| %>
        <li class=<%= "'product_#{picture.id}'" %>><%= link_to(image_tag("#{picture.image_url(:main).to_s}", :class => "full"), picture.image_url(:zoom_out).to_s, :rel => "product_#{picture.id}", :class => "image_zoom") %></li>
      <% end %>
    </ul>
  </div>
  <%= render "facebook_comments", :product => @product, :facebook_app_id => @facebook_app_id %>
</div>
