<%= stylesheet_link_tag 'new_structure/section/product_spy' %>
<div id="close_quick_view">x</div>
<% present('Product', :product => product, :member => @user, :facebook_app_id => @facebook_app_id, :logged? => user_signed_in?, :gift? => @gift, :shoe_size => @shoe_size, :only_view? => @only_view)  do |product_presenter| %>
  <section id="product">

    <div class="box-left">
      <div id="gallery">
        <%= product_presenter.render_pics %>
        <%=image_tag("product/vantagens-spy.png", class:"vantagens") %>
      </div>
    </div>
    <div class="box-right">
      <div id="product-details">
        <%= product_presenter.render_description %>
        <%= product_presenter.render_add_to_cart %>
        <%= render :partial => 'product/details', :locals => {:product_presenter => self, :hide_shipping => !! @hide_shipping} %>
        <%=link_to '>> Ver pÃ¡gina completa', product_seo_path(product.seo_path), :class => 'ver_produto' if @hide_shipping %>
      </div>
    </div>
  </section>
  
<% end %>
<%= render "shared/facebook_js", :member => current_user, :facebook_app_id => @facebook_app_id, :product => product%>

