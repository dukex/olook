#filters_container
  .filter
    = form_tag brand_path(parameters: params[:parameters]), method: 'get' do

      %fieldset.first_child
        %span.selected-type{ class: ("filter_selected" if params[:category].present?) }= params[:category].present? ? params[:category].pluralize : "VER TUDO"
        = select_tag('category', options_for_select({"Ver Tudo" => brand_path(parameters: params[:brand]), "Sapatos" => brand_path(parameters: "#{ params[:brand] }/sapato"), "Bolsas" => brand_path(parameters: "#{ params[:brand] }/bolsa"), "Acessórios" => brand_path(parameters: "#{ params[:brand] }/acessório"), "Roupas" => brand_path(parameters: "#{ params[:brand] }/roupa")}, selected: brand_path(parameters: "#{ params[:brand]}/#{ params[:category] }")), :onchange => ("location = this.options[this.selectedIndex].value;"))

      %fieldset
        %span.selected-type{ class: ("filter_selected" if params[:por].present?) }= params[:por].present? ? params[:por].gsub("-", " ").titleize : "NOSSA SELEÇÃO"
        = select_tag('por', options_for_select({"Nossa Seleção" => "", "Menor preço" => "menor-preco", "Maior preço" => "maior-preco", "Maior Desconto" => "maior-desconto"}, :selected => params[:por]), :class => "custom_select", :onchange => ("$(this).parents('form').submit();"))
  - if params[:category].present?


    .filter
      %span.selected-type.txt-filter{ class: ("filter_selected" if params[:size].present?) } TAMANHO
      .tab_bg &nbsp;
      %ul
        - filters_by("size").each do |text, amount|
          %li= filter_link_to(brand_path(SeoUrl.build_for_brands(search.filters_applied(:size, text.chomp), params)), text.chomp, search.filter_selected?(:size, text.chomp))
        - if params[:size].present?
          %li.clear_choice= link_to '[limpar]', brand_path(SeoUrl.build_for_brands(search.remove_filter(:size), params))

    .filter
      %span.selected-type.txt-filter{ class: ("filter_selected" if params[:subcategory].present?) } MODELO
      .tab_bg &nbsp;
      %ul
        - filters_by("subcategory").each do |text, amount|
          %li= filter_link_to(brand_path(SeoUrl.build_for_brands(search.filters_applied(:subcategory, text.chomp), params)), text.chomp, search.filter_selected?(:subcategory, text.chomp))
        - if params[:subcategory].present?
          %li.clear_choice= link_to '[limpar]', brand_path(SeoUrl.build_for_brands(search.remove_filter(:subcategory), params))

    .filter
      %span.selected-type.txt-filter{ class: ("filter_selected" if params[:color].present?) } COR
      .tab_bg &nbsp;
      %ul.cores
        - filters_by("color").each do |text, amount|
          %li= filter_link_to(brand_path(SeoUrl.build_for_brands(search.filters_applied(:color, text.chomp), params)), text.chomp, search.filter_selected?(:color, text.chomp))
        - if params[:color].present?
          %li.clear_choice= link_to '[limpar]', brand_path(SeoUrl.build_for_brands(search.remove_filter(:color), params))

  - if search.filter_value('category').to_a.include?('sapato')
    .filter
      %span.selected-type.txt-filter{ class: ("filter_selected" if params[:heel].present?) } SALTO
      .tab_bg &nbsp;
      %ul
        %li= filter_link_to(brand_path(SeoUrl.build_for_brands(search.filters_applied(:heel, '0-4'), params)), '0..4 cm', search.filter_selected?(:heel, '0-4'))
        %li= filter_link_to(brand_path(SeoUrl.build_for_brands(search.filters_applied(:heel, '5-9'), params)), '5..9 cm', search.filter_selected?(:heel, '5-9'))
        %li= filter_link_to(brand_path(SeoUrl.build_for_brands(search.filters_applied(:heel, '10-15'), params)), '10..15 cm', search.filter_selected?(:heel, '10-15'))
      - if params[:heel].present?
        %li.clear_choice= link_to '[limpar]', brand_path(SeoUrl.build_for_brands(search.remove_filter(:heel), params))

  .price-range
    %p#min-value-label{style:'background-image: none'} 0
    %p#max-value-label{style:'background-image: none'} 0
    .slider
      #slider-range

    %input{type: "text", id: "min-value"}
    %input{type:"text", id:"max-value"}
    %input{type:"hidden", name:"price", id:"price"}

