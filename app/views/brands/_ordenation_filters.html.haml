.exhibition-mode
  = form_tag catalog_path(parameters: params[:parameters]), method: 'get' do
    %fieldset
      %p.selected_relevance
        ORDENAÇÃO:
        %span Relevância
      = select_tag('por', options_for_select({"Relevância" => 0, "Menor preço" => "menor-preco", "Maior preço" => "maior-preco", "Maior Desconto" => "maior-desconto"}, :selected => params[:por]), :class => "custom_select", :onchange => ("$(this).parents('form').submit();"))

  .pagination.topo
    = render partial: "/shared/nav_bar_pagination", locals: { search: @search, link: catalog_path, other_parameters: "por=#{ params[:por]}" }

