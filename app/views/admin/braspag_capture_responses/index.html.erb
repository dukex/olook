<h2>Listing Braspag Capture Responses</h2>

<% content_for :sidebar do %>
  <div class="block">
    <h3>Filters</h3>

    <div class="content">
      <%= form_for([:admin, @search], :html => {:class => "form"}) do |f| %>
        <div class="group">
          <%= f.label :created_at_gte, "Created at from", :class => "label"  %>
          <%= f.date_select :created_at_gte, :include_blank => true %>
          <%= f.label :created_at_lte, "to", :class => "label" %>
          <%= f.date_select :created_at_lte, :include_blank => true %>
        </div>

        <div class-"group">
          <%= f.label :identification_code, "Transaction ID", :class => "label" %>
          <%= f.text_field :identification_code_eq, :class => "text_field" %>
        </div>

        <div class="group">
          <%= f.label :processed, "Processed", :class => "label" %>
          <%= f.select :processed_eq, {"Yes" => true, "No" => false} , {:include_blank => true} %>
        </div>

        <div class="group">
          <%= f.submit 'Search', :class => "button" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<div class="inner">
  <table class="table">
    <tr>
      <th>ID</th>
      <th>Transaction</th>
      <th><%= sort_link @search, :processed %></th>
      <th><%= sort_link @search, :retry %></th>
      <th>Status</th>
      <th><%= sort_link @search, :created_at %></th>
    </tr>

  <% @responses.each do |response| %>
   <% payment = Payment.find_by_identification_code(response.identification_code) %>
    <tr>
      <td><%= link_to response.id, admin_braspag_capture_response_path(response) %></td>
      <td><%= link_to response.identification_code, admin_payment_path(payment) if payment %>
          <%= response.identification_code unless payment %></td>
      <td><%= response.processed %></td>
      <td><%= braspag_capture_status(response.status) %></td>
      <td><%= response.created_at.to_s(:long) %></td>
    </tr>
  <% end %>
  </table>

  <div class="actions-bar wat-cf">
    <div class="pagination">
      <%= will_paginate @responses %>
    </div>
  </div>
</div>
