<%= form_for([:admin, @promotion]) do |f| %>
  <% if @promotion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@promotion.errors.count, "error") %> prohibited this admin_promotion from being saved:</h2>
      <ul>
        <% @promotion.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :starts_at %><br />
    <%= f.date_select :starts_at %>
  </div>

  <div class="field">
    <%= f.label :ends_at %><br />
    <%= f.date_select :ends_at %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :banner_label %><br />
    <strong class="info" >This field will appear on banner</strong><br/>
    <%= f.text_field :banner_label %>
  </div>

  <div class="field">
    <%= f.label :my_order_label %><br />
    <strong class="info" >This field will appear on the "Meu pedido" area</strong><br/>
    <%= f.text_field :my_order_label %>
  </div>

  <div class="field">
    <%= f.label :cart_label %><br />
    <strong class="info" >This field will appear on "sacola" page</strong><br/>
    <%= f.text_field :cart_label %>
  </div>

  <div class="field">
    <%= f.label :active %><br />
    <%= f.check_box :active %>
  </div>

  <div id="rules">

    <h2>Critérios para a promoção</h2>

    <% PromotionRule.all.each do |action| %>
      <%= f.fields_for :rules_parameters, RuleParameter.new do |builder| %>
        <div class="field">
          <%= builder.label :rule %>
          <%= builder.collection_select(:promotion_rule_id, PromotionRule.all, :id, :name) %>
        </div>
        <div class="field">
          <%= builder.label :rule_params %>
          <%= builder.text_field :rules_params %>
        </div>
      <% end %>
    <% end %>

  </div>

  <div id="actions">

    <h2>Critérios para action</h2>

    <% PromotionAction.all.each do |action| %>
      <%= f.fields_for :action_parameter, ActionParameter.new do |builder| %>
        <div class="field">
          <%= builder.label :action %>
          <%= builder.collection_select(:promotion_action_id, PromotionAction.all, :id, :type) %>
        </div>
        <div class="field">
          <%= builder.label :action_params %>
          <%= builder.text_field :action_params %>
        </div>
      <% end %>
    <% end %>

  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
