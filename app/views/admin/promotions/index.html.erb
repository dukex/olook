<h1>Listing promotions</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Discount percent</th>
    <th>Active</th>
    <th></th>
  </tr>

<% @promotions.each do |promotion| %>
  <tr>
    <td><%= promotion.name %></td>
    <td><%= promotion.discount_percent %></td>
    <td><%= promotion.active %></td>
    <td><%= link_to 'Show', admin_promotion_path(promotion) %></td>
    <td><%= link_to 'Edit', edit_admin_promotion_path(promotion) %></td>
    <td><%= link_to 'Destroy', admin_promotion_path(promotion), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Promotion', new_admin_promotion_path %>
