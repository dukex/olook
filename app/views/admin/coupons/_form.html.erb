<%= form_for([:admin, @coupon]) do |f| %>
  <% if @coupon.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@coupon.errors.count, "error") %> prohibited this coupon from being saved:</h2>

      <ul>
      <% @coupon.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :code %><br />
    <%= f.text_field :code %>
  </div>
  <div class="field">
    <%= f.label :value %><br />
    <%= f.text_field :value %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br />
    <%= f.datetime_select :start_date, :default => Time.now %>
  </div>
  <div class="field">
    <%= f.label :end_date %><br />
    <%= f.datetime_select :end_date, :default => Time.now %>
  </div>
  <div class="field">
    <%= f.label :number_of_coupons %><br />
    <%= f.text_field :remaining_amount %> <b>*If you leave this field empty the coupon will be automatically set as unlimited.</b>
  </div>
  <div class="field">
    <%= f.label :unlimited? %><br />
    <%= f.check_box :unlimited %>
  </div>
  <div class="field">
    <%= f.label :active? %><br />
    <%= f.check_box :active %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
