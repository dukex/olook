<h2>Pictures</h2>
<div class="inner">
  <table class="table" id="sortable_images" data-product-id="<%= product.id %>">
    <tr>
      <th>Position</th>
      <th>Display On</th>
      <th>Image</th>
      <th></th>
    </tr>

  <% product.pictures.order(:position).each do |picture| %>
    <tr id="picture_<%= picture.id %>">
      <td class="handle"><%= picture.position %></td>
      <td><%= picture.display_on_humanize %></td>
      <td><%= image_tag picture.image_url(:showroom).to_s, :size => '100x100' %></td>
      <td>
        <%= link_to 'Show', admin_product_picture_path(picture.product, picture), class: 'button' %>
        <%= link_to 'Edit', edit_admin_product_picture_path(picture.product, picture), class: 'button' %>
        <%= link_to 'Destroy', admin_product_picture_path(picture.product, picture), confirm: 'Are you sure?', method: :delete, class: 'button danger' %>
      </td>
    </tr>
  <% end %>
  </table>
  <div class="action-bar wat-cf">
    <div class="actions">
      <%= link_to 'Add a new picture', new_admin_product_picture_path(product) %>
      <%= link_to 'Add multiple pictures', new_multiple_pictures_admin_product_pictures_path(product) if product.pictures.empty? %>
    </div>
  </div>
</div>
