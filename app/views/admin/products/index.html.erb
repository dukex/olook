<h2>Listing products</h2>

<div class="inner">
  <table class="table">
    <tr>
      <th>Name</th>
      <th>Model number</th>
      <th>Category</th>
      <th>Color</th>
      <th>Picture</th>
      <th>Sample</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.model_number %></td>
      <td><%= product.category_humanize %></td>
      <td><%= product.color_name %></td>
      <td><%= image_tag(product.thumb_picture) if product.thumb_picture %></td>
      <td><%= image_tag(product.color_sample_url) unless product.color_sample.blank? %></td>
      <td><%= link_to 'Show', admin_product_path(product) %></td>
      <td><%= link_to 'Edit', edit_admin_product_path(product) %></td>
    </tr>
  <% end %>
  </table>

  <br />
</div>
