<h2>Listing Campaigns</h2>

<% content_for :secondary_navigation do %>
  <li><%= link_to 'New campaign', new_admin_campaign_path %></li>
<% end %>

<% content_for :sidebar do %>
  <div class="block">
    <h3>Filters</h3>

    <div class="content">
      <%= form_for([:admin, @search], :html => {:class => "form"}) do |f| %>
        <div class="group">
          <%= f.label :title, :class => "label" %>
          <%= f.text_field :title_contains, :class => "text_field" %>
        </div>
        <div class="group">
          <%= f.label :start_at_gte, "Start At", :class => "label"  %>
          <%= f.date_select :start_at_gte, :include_blank => true %>
          <%= f.label :end_at_gte, "to", :class => "label" %>
          <%= f.date_select :end_at_gte, :include_blank => true %>
        </div>

        <div class="group">
          <%= f.submit 'Search', :class => "button" %>
        </div>
      <% end %>
    </div>

  </div>
<% end %>

<div class="inner">
  <table class="table">
    <tr>
      <th>Title</th>
      <th>Active?</th>
      <th>Start At</th>
      <th>End At</th>
      <th>Campaign Description</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @campaigns.each do |campaign| %>
    <tr>
      <td><%= campaign.title %></td>
      <td><%= campaign.is_active? %></td>
      <td><%= l(campaign.start_at, :format => :short) %></td>
      <td><%= l(campaign.end_at, :format => :short) %></td>
      <td><%= campaign.description %></td>
      <td><%= campaign.created_at %></td>
      <td><%= campaign.updated_at %></td>
      <td><%= link_to 'Show', admin_campaign_path(campaign), :class => 'button' %></td>
      <td><%= link_to 'Edit', edit_admin_campaign_path(campaign), :class => 'button' %></td>
      <td><%= link_to 'Destroy', admin_campaign_path(campaign), confirm: 'Are you sure?', method: :delete, :class => 'button danger' %></td>
    </tr>
  <% end %>
  </table>

  <div class="actions-bar wat-cf">
    <div class="pagination">
      <%= will_paginate @campaigns %>
    </div>
  </div>
</div>
