%h2 Entregas de pedidos

.inner
  %table.table
    %tr
      %th Dias em relação à data prometida
      %th Despachado
      %th Entregue
    - @report_days.each do |report_day_number|
      %tr{:id => "#{report_day_number}_dias"}
        %td= I18n.t("admin_dashboard.deliver_days.#{report_day_number}")
        %td{:id => "delivering"}=report_deliver_link(params.merge(day_number: report_day_number, state: 'delivering'))

        %td{:id => "expected_delivery_on"}=report_deliver_link(params.merge(day_number: report_day_number, state: 'delivered'))
