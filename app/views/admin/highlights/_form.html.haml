= form_for [:admin, @highlight] do |f|
  - if @highlight.errors.any?
    #error_explanation
      %h2= "#{pluralize(@highlight.errors.count, "error")} prohibited this highlight from being saved:"
      %ul
        - @highlight.errors.full_messages.each do |msg|
          %li= msg

  %fieldset
    =f.label :title, "Título"
    =f.text_field :title

  %fieldset
    =f.label :subtitle, "Subtítulo"
    =f.text_field :subtitle

  =f.hidden_field :position

  - if @highlight.try(:position) == 1
    %fieldset
      =f.label :image, "Imagem Central"
      =f.file_field :image

  - if @highlight.try(:position) == 2
    %fieldset
      =f.label :left_image, "Imagem (Esquerda)"
      =f.file_field :left_image

  - if @highlight.try(:position) == 3
    %fieldset
      =f.label :right_image, "Imagem (Direita)"
      =f.file_field :right_image

  %fieldset
    =f.label :link, "Link (url completa, com 'http://')"
    =f.text_field :link
  
  %fieldset
    =f.label :alt_text, "ALT da imagem"
    =f.text_field :alt_text

  .actions
    = f.submit 'Save'
