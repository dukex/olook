<h2>Liquidação <%= @liquidation.name %></h2>

<%= form_for :liquidation_products, :remote => true do |f| %>

  <div class="field">
    <%= f.label :product_ids %>
    <%= f.text_field :products_ids %>
    <%= f.label :discount_percent %>
    <%= f.text_field :discount_percent %>%
    <%= f.submit "Add" %>
  </div>

  <h3>Products</h3>
  <ul>
    <% @products.each do |product| %>
      <li>
        <%= product.name %>
        <%= product.original_price %>
        <%= product.retail_price %>        
        <%= product.discount_percent %>                
        <%= link_to "Edit", edit_admin_liquidation_product_path(@liquidation.id, product.id) %>
        <%= link_to "Remove", admin_liquidation_product_path(@liquidation.id, product.id), :method => :delete %>
      </li>
    <% end %>
  </ul>

<% end %>
