- content_for :head do
  = javascript_include_tag "section/admin/brands"
= form_for [:admin, @brand] do |f|
  - if @brand.errors.any?
    #error_explanation
      %h2= "#{pluralize(@brand.errors.count, "error")} prohibited this brand from being saved:"
      %ul
        - @brand.errors.full_messages.each do |msg|
          %li= msg
  %fieldset
    =f.label :name
    =f.text_field :name
  %br
  %fieldset
    %legend CAPA
    .field
      =f.label :header_image_alt
      %br/
      =f.text_field :header_image_alt
    %br/
    .field
      =f.label :header_image
      %br/
      =f.file_field :header_image
    %br/
    .field
      =f.label :info
      %br
      =f.text_area :info
    %br/
    .field
      =f.label :bg_color
      %br
      =f.text_field :bg_color
      #picker
    %br/
    .field
      =f.label :font_color
      %br
      =f.text_field :font_color
  %br
  .actions
    = f.submit 'Save'
