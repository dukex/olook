<h2>Listing Admins</h2>

<div class="inner">
  <table class="table">
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Roles</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @admins.each do |admin| %>
    <tr>
      <td><%= admin.id %></td>
      <td><%= admin.email%></td>
      <td><%= admin.roles.collect {|role| role.name} %></td>
      <td><%= link_to 'Show', admin_admin_path(admin) %></td>
      <td><%= link_to 'Edit', edit_admin_admin_path(admin) %></td>
      <td><%= link_to 'Destroy', admin_admin_path(admin), confirm: 'Are you sure?', method: :delete %></td>
    </tr>
  <% end %>
  </table>

  <br />
</div>

<% content_for :secondary_navigation do %>
  <li><%= link_to 'New Admin', new_admin_admin_path %></li>
<% end %>
