<h2>Listando Administradores</h2>

<div class="inner">
  <table class="table">
    <tr>
      <th>ID</th>
      <th>Primeiro nome</th>
      <th>Último nome</th>
      <th>Email</th>
      <th>Permissão</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @admins.each do |admin| %>
    <tr>
      <td><%= admin.id %></td>
      <td><%= admin.first_name%></td>
      <td><%= admin.last_name%></td>
      <td><%= admin.email%></td>
      <td><%= admin.role.name %></td>
      <td><%= link_to 'Mostrar', admin_admin_path(admin), :class => 'button' %></td>
      <td><%= link_to 'Editar', edit_admin_admin_path(admin), :class => 'button' %></td>
      <td><%= link_to 'Apagar', admin_admin_path(admin), confirm: 'Tem certeza?', method: :delete, :class => 'button danger' %></td>
    </tr>
  <% end %>
  </table>

  <br />
</div>

<% content_for :secondary_navigation do %>
  <li><%= link_to 'Novo Administrador', new_admin_admin_path %></li>
<% end %>
