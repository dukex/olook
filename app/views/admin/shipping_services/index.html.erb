<h2>Listando serviços de entrega</h2>

<div class="inner">
  <table class="table">
    <tr>
      <th>Name</th>
      <th>Código ERP</th>
      <th>Fretes</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @shipping_services.each do |shipping_service| %>
    <tr>
      <td><%= shipping_service.name %></td>
      <td><%= shipping_service.erp_code %></td>
      <td><%= shipping_service.freight_prices.count %></td>
      <td><%= link_to 'Mostrar', admin_shipping_service_path(shipping_service), :class => 'button' %></td>
      <td><%= link_to 'Editar', edit_admin_shipping_service_path(shipping_service), :class => 'button' %></td>
      <td><%= link_to 'Remover todos preços de frete', admin_shipping_service_path(shipping_service), confirm: 'Are you sure?', method: :delete, :class => 'button danger' %></td>
    </tr>
  <% end %>
  </table>

  <br />
</div>

<% content_for :secondary_navigation do %>
  <li><%= link_to 'Novo serviço de entrega', new_admin_shipping_service_path %></li>
<% end %>
