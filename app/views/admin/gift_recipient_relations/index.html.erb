<h2>Listando relações de destinatário de presentes</h2>

<div class="inner">
  <table class="table">
    <tr>
      <th>Nome</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @gift_recipient_relations.each do |relation| %>
    <tr>
      <td><%= relation.name %></td>
      <td><%= link_to 'Mostrar', admin_gift_recipient_relation_path(relation), :class => 'button' %></td>
      <td><%= link_to 'Editar', edit_admin_gift_recipient_relation_path(relation), :class => 'button' %></td>
      <td><%= link_to 'Apagar', admin_gift_recipient_relation_path(relation), confirm: 'Tem certeza?', method: :delete, :class => 'button danger' %></td>
    </tr>
  <% end %>
  </table>

  <br />
</div>

<% content_for :secondary_navigation do %>
  <li><%= link_to 'Nova relação de destinatário', new_admin_gift_recipient_relation_path %></li>
<% end %>
