<h2>Listing Discounts</h2>

<% content_for :sidebar do %>
  <div class="block">
    <h3>Filters</h3>

    <div class="content">
      <%= form_for([:admin, @search], :html => {:class => "form"}) do |f| %>
        <div class="group">
          <%= f.label :email_contains, :class => "label" %>
          <%= f.text_field :email_contains, :class => "text_field" %>
        </div>
        <div class="group">
          <%= f.submit 'Search', :class => "button" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>


<div class="inner">
  <table class="table">
    <tr>
      <th>Email</th>
      <th>Nome</th>
      <th>Início do Desconto</th>
      <th>Final do Desconto</th>
      <th>Desconto Utilizado?</th>
    </tr>
    <% @user_discounts.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.name %></td>
      <td><%= user.discount_start %></td>
      <td><%= user.discount_end %></td>
      <td><%= user.user_discount ? user.user_discount : "Não utilizado" %></td>
    </tr>
    <% end %>    
  </table>

  <div class="actions-bar wat-cf">
    <div class="pagination">
      <%# will_paginate @user_discounts %>
    </div>
  </div>
</div>

