<h2>Listando Landing pages</h2>

<div class="inner">
  <table class="table">
    <tr>
      <th>Título</th>
      <th>URL</th>
      <th>Habilitado</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @landing_pages.each do |page| %>
    <tr>
      <td><%= page.page_title %></td>
      <td><%= link_to page.page_url,  landing_url(page.page_url) %></td>
      <td><%= page.enabled ? "Sim" : "Não" %></td>
      <td><%= link_to 'Show', admin_landing_page_path(page), :class => 'button' %></td>
      <td><%= link_to 'Edit', edit_admin_landing_page_path(page), :class => 'button' %></td>
      <td><%= link_to 'Destroy', admin_landing_page_path(page), confirm: 'Tem certeza?', method: :delete, :class => 'button danger' %></td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to 'Nova Landing page', new_admin_landing_page_path %>
</div>
