<h2>Listando Tipo de Ocasiões</h2>

<div class="inner">
  <table class="table">
    <tr>
      <th>Nome</th>
      <th>Data</th>
      <th>Relação com destinatário</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @gift_occasion_types.each do |type| %>
    <tr>
      <td><%= type.name %></td>
      <td><%= type.date %></td>
      <td><%= type.gift_recipient_relation_name %></td>
      <td><%= link_to 'Mostrar', admin_gift_occasion_type_path(type), :class => 'button' %></td>
      <td><%= link_to 'Editar', edit_admin_gift_occasion_type_path(type), :class => 'button' %></td>
      <td><%= link_to 'Apagar', admin_gift_occasion_type_path(type), confirm: 'Tem certeza?', method: :delete, :class => 'button danger' %></td>
    </tr>
  <% end %>
  </table>

  <br />
</div>

<% content_for :secondary_navigation do %>
  <li><%= link_to 'Novo Tipo de Ocasião', new_admin_gift_occasion_type_path %></li>
<% end %>
