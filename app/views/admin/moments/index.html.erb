<h2>Listing Moment</h2>

<% content_for :sidebar do %>
  <div class="block">
    <h3>Filters</h3>

    <div class="content">
      <%= form_for([:admin, @search], :html => {:class => "form"}) do |f| %>
        <div class="group">
          <%= f.label :name, :class => "label" %>
          <%= f.text_field :name_contains, :class => "text_field" %>
        </div>
        <div class="group">
          <%= f.submit 'Search', :class => "button" %>
        </div>
      <% end %>
    </div>

  </div>
<% end %>

<div class="inner">
  <table class="table">
    <tr>
      <th>Name</th>
      <th>Active</th>
      <th>Position</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @moments.each do |moment| %>
    <tr>
      <td><%= moment.name %></td>
      <td><%= moment.active %></td>
      <td><%= moment.position %></td>
      <td><%= link_to 'Show', admin_moment_path(moment) %></td>
      <td><%= link_to 'Edit', edit_admin_moment_path(moment) %></td>
      <td><%= link_to 'Destroy', admin_moment_path(moment), confirm: 'Are you sure?', method: :delete %></td>
    </tr>
  <% end %>
  </table>

  <br />
  <% content_for :secondary_navigation do %>
    <li><%= link_to 'New Moment', new_admin_moment_path %></li>
  <% end %>
  <div class="actions-bar wat-cf">
    <div class="pagination">
      <%= will_paginate @moments %>
    </div>
  </div>
</div>
