<h2>Listando Lookbooks</h2>

<% content_for :sidebar do %>
  <div class="block">
    <h3>Filtros</h3>

    <div class="content">
      <%= form_for([:admin, @search], :html => {:class => "form"}) do |f| %>
        <div class="group">
          <%= f.label :name, "Nome" ,:class => "label" %>
          <%= f.text_field :name_contains, :class => "text_field" %>
        </div>
        <div class="group">
          <%= f.submit 'Procurar', :class => "button" %>
        </div>
      <% end %>
    </div>

  </div>
<% end %>

<div class="inner">
  <table class="table">
    <tr>
      <th>Nome</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @lookbooks.each do |lookbook| %>
    <tr>
      <td><%= lookbook.name %></td>
      <td><%= link_to 'Mostrar', admin_lookbook_path(lookbook), :class => 'button' %></td>
      <td><%= link_to 'Editar', edit_admin_lookbook_path(lookbook), :class => 'button' %></td>
      <td><%= link_to 'Apagar', admin_lookbook_path(lookbook), confirm: 'Tem certeza?', method: :delete, :class => 'button danger' %></td>
    </tr>
  <% end %>
  </table>

  <br />
  <% content_for :secondary_navigation do %>
    <li><%= link_to 'Novo Lookbook', new_admin_lookbook_path %></li>
  <% end %>
  <div class="actions-bar wat-cf">
    <div class="pagination">
      <%= will_paginate @lookbooks %>
    </div>
  </div>
</div>
