<style>
.product-map {z-index:1; position:relative; background-repeat:no-repeat; width:auto; display:inline-block; padding:5px 0px 5px 30px; height:auto; min-height:20px;}
.product-map {background-image:url(<%= @lookbook.icon_url %>);}
.product-map:hover {background-image:url(<%= @lookbook.icon_over.url %>);}
.product-map span {visibility:hidden; padding:5px; background-color:<%= @lookbook.bg_color %>;}
.product-map a {color:<%= @lookbook.fg_color %>;}
.product-map:hover span {visibility:visible;}
</style>

<h2>Lookbook</h2>
<div class="inner">
  <p id="notice"><%= notice %></p>

  <p>
    <b>Name:</b>
    <%= @lookbook.name %>
  </p>
  <p>
    <b>Thumb:</b>
    <%= image_tag @lookbook.thumb_image.try(:url) %>
  </p>

  <p>
    <b>Icon:</b>
    <%= image_tag @lookbook.icon.try(:url) %>
  </p>
  <p>
    <b>Icon Over:</b>
    <%= image_tag @lookbook.icon_over.try(:url) %>
  </p>
  <p>
    <b>Foreground Color:</b>
    <%= @lookbook.fg_color %>
  </p>
  <p>
    <b>Background Color:</b>
    <%= @lookbook.bg_color %>
  </p>

  <%= render :partial => 'images', :locals => {:lookbook => @lookbook} %>
  <%= render :partial => 'products', :locals => {:lookbook => @lookbook} %>
  
<% content_for :secondary_navigation do %>
  <li><%= link_to 'Edit', edit_admin_lookbook_path(@lookbook) %></li>
  <li><%= link_to 'Back', admin_lookbooks_path %></li>
<% end %>
</div>
