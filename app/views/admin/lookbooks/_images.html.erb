<style>
<% lookbook.images.each do |image| %>
  <% image.lookbook_image_maps.each do |lim| %>
#pm<%= lim.id %> {top:<%= lim.coord_y %>px; left:<%= lim.coord_x %>px;}
  <% end %>
<% end %>
</style>
<h2>Images</h2>
<div class="inner">
  <table class="table">
    <tr>
      <th>Image</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% lookbook.images.each do |image| %>
    <tr>
      <td>
        <div id="im<%= image.id %>">
          <% unless image.image_url(:thumb).nil? %>
            <%= image_tag image.image_url(:thumb).to_s %>
          <% end %>
          <% render partial: image.lookbook_image_maps %>
        </div>
      </td>
      <td><%= link_to 'Show', admin_lookbook_image_path(image.lookbook, image), class: 'button' %></td>
      <td><%= link_to 'Edit', edit_admin_lookbook_image_path(image.lookbook, image), class: 'button' %></td>
      <td><%= link_to 'Destroy', admin_lookbook_image_path(image.lookbook, image), confirm: 'Are you sure?', method: :delete, class: 'button danger' %></td>
    </tr>
  <% end %>
  </table>
  <div class="action-bar wat-cf">
    <div class="actions">
      <%= link_to 'Add a new image', new_admin_lookbook_image_path(lookbook) %>
    </div>
  </div>
</div>
