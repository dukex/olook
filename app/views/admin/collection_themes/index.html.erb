<h2>Listing collection_theme</h2>

<% content_for :sidebar do %>
  <div class="block">
    <h3>Filters</h3>

    <div class="content">
      <%= form_for([:admin, @search], :html => {:class => "form"}) do |f| %>
        <div class="group">
          <%= f.label :name, :class => "label" %>
          <%= f.text_field :name_contains, :class => "text_field" %>
        </div>
        <div class="group">
          <%= f.submit 'Search', :class => "button" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<div class="inner">
  <table class="table">
    <tr>
      <th>Name</th>
      <th>Active</th>
      <th>Position</th>
      <th></th>
    </tr>

  <% @collection_themes.each do |collection_theme| %>
    <tr>
      <td><%= collection_theme.name %></td>
      <td><%= collection_theme.active %></td>
      <td><%= collection_theme.position %></td>
      <td>
        <%= link_to 'Show', admin_collection_theme_path(collection_theme), :class => 'button' %>
        <%= link_to 'Edit', edit_admin_collection_theme_path(collection_theme), :class => 'button' %>
        <%= link_to 'Destroy', admin_collection_theme_path(collection_theme), confirm: 'Are you sure?', method: :delete, :class => 'button danger' %>
      </td>
    </tr>
  <% end %>
  </table>

  <br />
  <% content_for :secondary_navigation do %>
    <li><%= link_to 'New collection_theme', new_admin_collection_theme_path %></li>
  <% end %>
  <div class="actions-bar wat-cf">
    <div class="pagination">
      <%= will_paginate @collection_themes %>
    </div>
  </div>
</div>
