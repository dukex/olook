<%= form_for([:admin,@collection_theme]) do |f| %>
  <% if @collection_theme.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@collection_theme.errors.count, "error") %> impediram essa coleção de ser salva:</h2>

      <ul>
      <% @collection_theme.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :collection_theme_group %><br />
    <%= f.collection_select :collection_theme_group, CollectionThemeGroup.all, :name, :id %>
  </div>
  <%= f.fields_for :new_collection_theme_group, CollectionThemeGroup.new do |group| %>
    <div class="field">
      <%= group.label :name, 'OU Crie um novo Grupo' %><br />
      <%= group.text_field :name %>
    </div>
  <%- end %>
  <div class="field">
    <%= f.label :name, 'Tema' %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
  <%= f.label :active %><br />
    <%= f.check_box :active %>
  </div>
  <div class="field">
    <%= f.label :header_image %><br />
    <%= f.file_field :header_image %>
  </div>
  <div class="field">
    <%= f.label :header_image_alt %><br />
    <%= f.text_field :header_image_alt %>
  </div>
  <div class="field">
    <%= f.label :video_link %><br />
    <%= f.text_field :video_link %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
