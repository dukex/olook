<h2>Picture</h2>
<div class="inner">
  <p>
    <b>Display on:</b>
    <%= @picture.display_on_humanize %>
  </p>

  <p>
    <b>Image:</b>
    <%= image_tag @picture.image_url(:thumb).to_s %>
  </p>
</div>

<% content_for :secondary_navigation do %>
  <li><%= link_to 'Edit', edit_admin_product_picture_path(@picture.product, @picture) %></li>
  <li><%= link_to 'Back', admin_product_path(@picture.product) %></li>
<% end %>
