<h2>Listing Roles</h2>

<div class="inner">
  <table class="table">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @roles.each do |role| %>
    <tr>
      <td><%= role.name %></td>
      <td><%= role.description %></td>
      <td><%= link_to 'Show', admin_role_path(role) %></td>
      <td><%= link_to 'Edit', edit_admin_role_path(role) %></td>
      <td><%= link_to 'Destroy', admin_role_path(role), confirm: 'Are you sure?', method: :delete %></td>
    </tr>
  <% end %>
  </table>

  <br />
</div>

<% content_for :secondary_navigation do %>
  <li><%= link_to 'New Role', new_admin_role_path %></li>
<% end %>
