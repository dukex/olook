<h2>Roles</h2>


<div class="inner">
  <p>
    <b>Name:</b>
    <%= @role.name %>
  </p>

  <p>
    <b>Description:</b>
    <%= @role.description %>
  </p>

  <p>
      <b><%= @role.permissions.collect { |permission| permission.model_name + " -  "+ permission.action_name } %></b>
   </p>

</div>

<% content_for :secondary_navigation do %>
  <li><%= link_to 'Edit', edit_admin_role_path(@role) %></li>
  <li><%= link_to 'Back', admin_roles_path %></li>
<% end %>
