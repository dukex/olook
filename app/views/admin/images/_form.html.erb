<%= form_for([:admin, @image.lookbook, @image]) do |f| %>
  <% if @image.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@image.errors.count, "error") %> prohibited this image from being saved:</h2>

      <ul>
      <% @image.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <b>Current image:</b><br />
    <%= image_tag @image.image.to_s %>
  </p>

  <div class="field">
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </div>

<table class="table">
  <tr>
    <th>Product</th>
    <th>Coordinates</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @image.lookbook_image_maps.each do |lim| %>
  <tr>
    <td><%= lim.product.name %></td>
    <td><%= lim.coord_x %>x<%= lim.coord_y %></td>
    <td></td>
    <td></td>
    <td></td>
  <tr>
<% end %>
</table>
  
<%= fields_for :lookbook_image_map do |lim| %>
  <%= lim.hidden_field :lookbook_id, value: @image.lookbook.id %>
  <%= lim.hidden_field :product_id %>
  <%= lim.hidden_field :image_id, value: @image.id %>
  <ul class="inline">
    <li>
      <%= lim.autocomplete_field :product_name, autocomplete_product_name_admin_lookbook_images_path, update_elements: {id: '#lookbook_image_map_product_id'}, extra_data: [:thumb_picture, :model_number] %>
    </li>
    <li>
      <%= lim.label :coord_x %>
      <%= lim.text_field :coord_x %>
    </li>
    <li>
      <%= lim.label :coord_y %>
      <%= lim.text_field :coord_y %>
    </li>
  </ul>
<% end %>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
