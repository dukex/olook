<h2>Listing moip callbacks</h2>

<% content_for :sidebar do %>
  <div class="block">
    <h3>Filters</h3>

    <div class="content">
      <%= form_for([:admin, @search], :html => {:class => "form"}) do |f| %>
        <div class="group">
          <%= f.label :created_at_gte, "Created at from", :class => "label"  %>
          <%= f.date_select :created_at_gte, :include_blank => true %>
          <%= f.label :created_at_lte, "to", :class => "label" %>
          <%= f.date_select :created_at_lte, :include_blank => true %>
        </div>

        <div class-"group">
          <%= f.label :id_transacao_eq, "Transaction ID", :class => "label" %>
          <%= f.text_field :id_transacao_eq, :class => "text_field" %>
        </div>

        <div class="group">
          <%= f.label :processed, "Processed", :class => "label" %>
          <%= f.select :processed_eq, {"Yes" => true, "No" => false} , {:include_blank => true} %>
        </div>

        <div class="group">
          <%= f.submit 'Search', :class => "button" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<div class="inner">
  <table class="table">
    <tr>
      <th>Transaction ID</th>
      <th><%= sort_link @search, :processed %></th>
      <th>Retries</th>
      <th>Status</th>
      <th>Payment ID</th>
      <th><%= sort_link @search, :created_at %></th>
    </tr>

  <% @moip_callbacks.each do |moip_callback| %>
    <tr>
      <td><%= moip_callback.id_transacao %></td>
      <td><%= moip_callback.processed %></td>
      <td><%= moip_callback.retry %></td>
      <td><%= payment_status(moip_callback.status_pagamento) %></td>
      <td><%= moip_callback.payment_id %></td>
      <td><%= moip_callback.created_at.to_s(:long) %></td>
    </tr>
  <% end %>
  </table>

  <div class="actions-bar wat-cf">
    <div class="pagination">
      <%= will_paginate @moip_callbacks %>
    </div>
  </div>
</div>
