<ul>
  <% featured_products.each do |product_hash| %>
  <%
    product = product_hash[:product]
    label = product_hash[:label] 
    shoe_size = params[:shoe_sizes].try(:first).try(:to_i) || current_user.try(:shoes_size).try(:to_i)
  %>
  <%= render "featured_product_item", product: product, label: label, shoe_size: shoe_size %>
  <% end %>
</ul>
