- content_for :head do
  = stylesheet_link_tag "new_structure/section/collection_themes"
  :javascript
    start_position = #{@search.range_values_for(:price)[:min] rescue 0};
    final_position = #{@search.range_values_for(:price)[:max] rescue 600};
= render "shared/mkt_breadcrumb"
= first_level_breadcrumb "Coleções"
#catalog
  = render "menu", collection_theme_groups: @collection_theme_groups
  #collection_theme_content
    #home_collections
      .banner_principal
        = link_to image_tag("collections/destaque_colecao_grunge-1.jpg", alt: "Grunge", title: "Grunge"), collection_theme_path('grunge'), onclick: track_event("Colecoes", "TopBigBanner")
      .left_banner
        = link_to image_tag("collections/azul.jpg", alt: "azul cobalto", title: "azul cobalto"), collection_theme_path('azul-cobalto'), onclick: track_event("Colecoes", "MiddleLeftBanner")
        %p.collection Azul
        %p.resume Cor forte ganha destaque na estação
        %p.looks= link_to "veja a coleção", collection_theme_path('azul-cobalto'), target: "_blank"
      .right_banner
        = link_to image_tag("collections/animal.jpg", alt: "animal print", title: "animal print"), collection_theme_path('animal-print'), onclick: track_event("Colecoes", "MiddleRightBanner")
        %p.collection Animal Print
        %p.resume Estampa clássica chega repaginada na nova temporada
        %p.looks= link_to 'veja a coleção', collection_theme_path('animal-print'), target: "_blank"
- content_for :footer do
  = javascript_include_tag "collection_themes"
