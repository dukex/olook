%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
  %body
    %h3 Boletos cancelados automaticamente
    %br
    %h4
      = @billets.size
      boleto(s) cancelado(s)
    - if @billets.size > 0
      %table{:style => "font-family:'Lucida Sans Unicode','Lucida Grande',Sans-Serif;font-size: 12px;background: #fff;margin: 45px;width: 480px;border-collapse: collapse;text-align: center;border: 1px solid;"}
        %tr{:style => "font-size: 14px;font-weight: normal;padding: 10px 8px;border-bottom: 2px solid #6678b1;"}
          %th ID do pagamento:
          %th ID do pedido
        - @billets.each_with_index do |billet, index|
          %tr{:style => "padding: 9px 8px 0px 8px;background:#{index.even? ? "#CCC" : "#FFF"};"}
            %td{:style => "vertical-align:middle;height: 30px;"}= billet.id
            %td{:style => "vertical-align:middle;height: 30px;"}= billet.try(:order).try(:number)
    - else
      Nenhum boleto foi cancelado
