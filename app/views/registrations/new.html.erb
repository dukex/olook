<% content_for :head do %>
  <%= stylesheet_link_tag "section/register" %>
<% end %>

<div id="models">
  <%= image_tag('common/models-inscription.png') %>
</div>
<div id="sign-up">
  <% if @signup_with_facebook %>
    <h2>Só mais um passo...</h2>

    <p class="facebook"> Crie uma senha para acessar nosso site:</p>
  <% else %>
    <div class="not_connected">
      <h2>Só mais um passo e <span>você verá seu estilo</span></h2>
      <p>Quando o resultado ficar pronto, você receberá diversos e-mails com dicas e produtos da moda com a sua cara.</p>
    </div>
    <!-- TODO: Commented out due to facebook problem
    <div class="connect">
      <p>Conecte-se com o facebook e veja sua vitrine antes de todas</p>
      <%#= render "facebook_connect" %>
    </div>
  -->
  <% end %>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <% if resource.errors.any? %>
      <div id="error_explanation">
        <ul>
        <% resource.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <fieldset>
      <ol class="<%= "facebook" if @signup_with_facebook %>">
        <li>
          <%= f.label :first_name, "Primeiro nome" %>
          <%= f.text_field :first_name %>
        </li>

        <li>
          <%= f.label :last_name, "Sobrenome" %>
          <%= f.text_field :last_name %>
        </li>

        <li>
          <%= f.label :email, "Email" %>
          <%= f.email_field :email %>
        </li>
      </ol>
      <ol>
        <li class="password">
          <label for="user_password">Senha
            <span class='hint'>mínimo 6 caracteres</span>
          </label>
          <%= f.password_field :password %>
        </li>

        <li>
          <%= f.label :password_confirmation, "Confirmar senha" %>
          <%= f.password_field :password_confirmation %>
        </li>

        <% if resource.is_invited %>
          <li class="cpf">
            <span class="hint">Para você ganhar R$10, preencha o seu CPF.</span>
            <%= f.label :cpf, "CPF" %>
            <%= f.text_field :cpf %>
          </li>
        <% end %>

        <li class="terms">
          <p>Ao concluir o cadastro você aceita os <%= link_to 'Termos de uso', terms_path, :target => "_blank" %> e a nossa <%= link_to "Política de Privacidade", privacy_path %></p>
        </li>
      </ol>
    </fieldset>

    <fieldset class="buttons">
      <ol>
        <li><%= f.submit "", :id => "register" %></li>
      </ol>
    </fieldset>
  <% end %>
</div>

