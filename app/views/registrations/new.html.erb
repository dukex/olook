<% content_for(:head) do %>

  <script type="text/javascript">
      if(window.opener) {
        window.close();
        window.opener.location = '<%= @redirect_uri %>';
      }
  </script>

<% end %>

<h2>Preparada?</h2>

  <p>Nossos stylists ir&atilde;o utilizar estas informa&ccedil;&otilde;es para
     escolher <b>sapatos, bolsas e acess&oacute;rios,</b> e montar&atilde;o uma
     vitrine feita s&oacute; para voce.</p>

  <%= link_to "Sign up", new_user_registration_path %> or
  <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), :class => "fbpopup", :"data-width" => 600, :"data-height" => 400 %>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :first_name %><br />
    <%= f.text_field :first_name %></div>

  <div><%= f.label :last_name %><br />
  <%= f.text_field :last_name %></div>

 <% if resource.is_invited %>
    <div><%= f.label :cpf %><br />
    <%= f.text_field :cpf %></div>
  <% end %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render :partial => "shared/links" %>

