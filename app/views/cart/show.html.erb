<% content_for :head do %>
  <%= stylesheet_link_tag "section/checkout" %>
<% end %>

<table cellpadding="0" cellspacing="0" class="items_list">
  <thead>
    <tr>
      <th class="item">Item</th>
      <th class="amount">Quantidade</th>
      <th class="value" colspan="2">Valor</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <td colspan="3">Subtotal</td>
      <td>R$ 397,00</td>
    </tr>
  </tfoot>
  <tbody>
  <% if @order %>
    <% @order.line_items.each do |item| %>
      <tr>
        <td>
          <%= item.variant.name %>
        </td>
        <td><%= item.quantity %></td>
        <td class="value"><%= item.variant.price %></td>
        <td>
          <%= form_for(cart_path, :method => :put) do %>
            <%= hidden_field('variant','id', :value => item.variant.id) %>
            <%= submit_tag('Excluir')  %>
          <% end %>
        </td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

<%= form_for(cart_path, :method => :delete) do %>
  <%= submit_tag('Limpar Sacola')  %>
<% end %>

