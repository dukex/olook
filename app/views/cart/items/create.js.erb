<% if params['from_sacola'] %>

	$("table#items tbody").first().append("<%= escape_javascript( render partial: 'cart/items/row', 
																							locals: { 
																								cart_service: @cart_service, 
																								item: @cart.items.last 
																							} ) %>");
	$("table#products").last().fadeOut('slow');

  $('table#total tr.total span').text('<%= number_to_currency(@cart_service.total) %>');

  // remove top line from 'embrulhar pedido'
  $('section#cart table.check.gift').css('border-top', 0);

<% else %>
  
  $("#cart_summary").show();

<% end %>

  if ($("#cart_summary li.product_item[data-id=<%= @item.id %>]").length == 0) {
    $("#cart_summary li.last").before("<%= escape_javascript( render partial: 'shared/cart_line_item', locals: {item: @item, hidden: true}) %>"); 
    $("#cart_summary li.product_item:last").fadeIn('slow');
  }
  
  $('div.overlay').hide();
  $('#quick_view').hide();

  $("#cart_items").text("<%= pluralize(@cart.items_total, 'item', 'itens') %>");
  $("p.new-sacola a.cart").addClass("full");
  $("p.freight").next().hide();