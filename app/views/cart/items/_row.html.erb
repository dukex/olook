<tr id="product_<%= item.product.id %>">
  <td class="item">
    <% unless item.thumb_picture.nil? %>
      <%= image_tag item.variant.bag_picture %>
    <% end %>
    <p class="txt-black"><span><%= item.variant.name %></span></p>
    <p>Tamanho: <%= item.variant.description %></p>
    <p>Cor/Material: <%= item.variant.color_name %></p>
  </td>
  <td class="delete-item">
    <%= form_for(item, :method => :delete,
                       :remote => :true, 
                                  :html => { 
                                    :onsubmit => track_event("Shopping", "RemoveFromCart", item.variant.product.id.to_s),
                                    :id => "remove_item_form_#{item.id}" }) do %>
      <%= submit_tag('excluir')  %>
    <% end %>
  </td>  
  <td class="amount">

    <%= form_for(item, :method => :put, 
                        remote: true, 
                        :html => { 
                          onsubmit: track_event("Shopping", "ChangeAmount", item.product.id), 
                          id: "change_amount_#{item.id}"
                        }) do %>

      <%= select_tag('quantity', options_for_select((1..item_qty_max_option(item)).to_a, item.quantity), onchange: "changeCartItemQty('#{item.id}')") %>
    <% end %>
  </td>
  <td class="discount">
    <%= render partial: 'cart/items/discount', locals: { cart_service: cart_service, item: item } %>
  </td>
  <td class="value" >
    <%= render partial: 'cart/items/subtotal', locals: { cart_service: cart_service, item: item } %>
  </td>
</tr>