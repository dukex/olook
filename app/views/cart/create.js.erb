$(document).ready(function() {
  $('div.overlay').hide();
  $('#quick_view').hide();

  $("#cart_summary").show();
  if ($("#cart_summary li.product_item[data-id=<%= @variant.id %>]").length == 0) {
    $("#cart_summary li.last").before("<%= escape_javascript( render partial: 'shared/cart_line_item', locals: {item: @cart.cart_items.last, hidden: true}) %>"); 
    $("#cart_summary li.product_item:last").fadeIn('slow');
  }
  
  $("#cart_items").text(<%= @cart.cart_items_total %>);
  $("nav.menu ul li.cart a.cart").addClass("selected");
});
