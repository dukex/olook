<% content_for :head do %>
  <%= stylesheet_link_tag "section/lookbooks" %>
<% end %>

<% content_for :footer do %>
  <%= javascript_include_tag "lookbooks" %>
<% end %>

<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/pt_BR/all.js#xfbml=1&appId=<%= @facebook_app_id %>";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<section id="lookbooks">
  <%= render 'shared/banners/olooklet' %>
  <!-- <h1>Tendências</h1> -->
  <%= render "carousel_lookbooks", :lookbooks => @lookbooks %>
  <div id="carousel_lookbooks_product">

    <% if @lookbook.has_video? %>
      <%= link_to "Assista ao vídeo", "#", :class => "video_link", :rel => "#{@lookbook.video.url}", :title => "#{@lookbook.video.title}", :style => "background-image: url('#{@lookbook.movie_image_url(:movie_thumb)}');" %>
      <div class="video_description">
        <h1><%= @lookbook.video.title %></h1>
        <%= link_to "Saiba tudo sobre essa tendência", "#" %>
      </div>
    <% end %>
    <ul>
      <% 0.upto(@lookbook.images.count - 1) do |image| %>
        <li>
          <%= image_tag @lookbook.images[image].image.try(:url), :alt => "Imagem #{image}" %>
          <%= link_to "X", lookbooks_path, :class => "close" %>
          <% @lookbook.images[image].lookbook_image_maps.each do |lim| %>
            <% if lim.product.is_a? Product %>
            <div class="product-map" id="pm<%= lim.id %>" style="top:<%= lim.coord_y %>px; left:<%= lim.coord_x %>px;">
              <%= link_to product_path(lim.product.try(:id)), data: { params: { gift: false, shoe_size: nil } }, rel: "#{lim.product.try(:id)}", remote: true  do %>
                <p class="spy"><%= lim.product.try(:name) %></p>
              <% end %>
            </div>
            <% end %>
          <% end %>
        </li>
      <% end %>
    </ul>
    <%= link_to "Anterior", "javascript:void(0);", :class => "prev-pic" %>
    <%= link_to "Próximo", "javascript:void(0);", :class => "next-pic" %>
    <div class="pagination"></div>
  </div>
  <div class="products_list">
    <h1>Confira os produtos: <%= @lookbooks.first.name %></h1>
    <ul>
      <% @products.each do |product| %>
        <%= get_partial(product) %>
      <% end %>
    </ul>
  </div>
</section>
<% content_for :footer do %>

  <%= render :partial => "shared/metrics/criteo/listing_tracker", :locals => { :products => @products_id } %>
<% end %>

