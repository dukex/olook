<% content_for :head do %>
  <%= stylesheet_link_tag "section/my_account" %>
<% end %>

<div id="box_title_my_account">
  <div class="content">
    <h1>Minha conta</h1>
    <h2>Acompanhe seus pedidos, altere seus dados e veja seus créditos</h2>
  </div>
</div>
<div id="my_account" class="address_new_edit">
  <div id="box_menu">
    <%= render "shared/my_account/menu" %>
  </div>
  <div id="data">
    <div class="box_title">
      <h1 class="addresses">Endereços</h1>
    </div>
    <%= form_for @address, :url => user_addresses_path do |f| %>
      <section class="main">
        <%= render "shared/errors", :object => @address %>
        <%= render "shared/address/form", :address => @address, :f => f %>
        <fieldset class="buttons">
          <ol>
            <li>
              <%= f.submit 'SALVAR', :class => "save" %>
            </li>
          </ol>
        </fieldset>
      </section>
    <% end %>
  </div>
</div>
