<%= form_for(resource, :as => resource_name, :url => create_half_user_path) do |f| %>
<%= f.hidden_field :half_user, :value => "true" %>

  <% if resource.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% resource.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
    <ol class="<%= "facebook" if @signup_with_facebook %>">
      <li>
        <%= f.label :first_name, "Nome" %>
        <%= f.text_field :first_name %>
      </li>

      <li>
        <%= f.label :last_name, "Sobrenome" %>
        <%= f.text_field :last_name %>
      </li>
      <li>
        <%= f.label :email, "E-mail" %>
        <%= f.email_field :email %>
      </li>
    </ol>

    <ol>
      <li class="password">
        <label for="user_password">Senha</label>
        <%= f.password_field :password %>
      </li>

      <li>
        <%= f.label :password_confirmation, "Confirmar senha" %>
        <%= f.password_field :password_confirmation %>
      </li>

      <li class="gender">
        <p>Sexo</p>
        <%= f.select(:gender, options_for_select({"Selecione" => "", "Feminino" => "0", "Masculino" => "1"})) %>
      </li>
      
      <li class="nasc">
        <%= f.label :birthday, "Data de Nascimento" %>
        <%= f.text_field :birthday %>
      </li>
      
      <li class="CPF">
        <%= f.label :cpf, "CPF" %>
        <%= f.text_field :cpf %>
      </li>  

      <li class="terms"><p>Concluindo o cadastro você aceita os <%= link_to 'Termos e Condições', terms_path, :target => "_blank" %> e a nossa <%= link_to "Política de Privacidade", privacy_path, :target => "_blank" %> </p></li>
      <li class="buttons"><%= f.submit "Cadastrar", :id => "register" %></li>
    </ol>
  </fieldset>
<% end %>
