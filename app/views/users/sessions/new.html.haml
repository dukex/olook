- content_for :head do
  = stylesheet_link_tag  "new_structure/section/session"
.home.sign-in
  .login
    - if flash[:notice]
      %h2= flash[:notice]
    #sign-in-box
      = link_to 'Entrar com Facebook', user_omniauth_authorize_path(:facebook), :class => 'fb-login-button popup', :"data-width" => 410, :"data-height" => 300, onclick: track_event("FacebookConnect", "ConnectFromLoginPage")
      = render partial: "shared/errors", locals: { object: resource }
      = render partial: "form"
    = render partial: "shared/social_links"
  .quiz_login
    =image_tag "login/olook_vantagens.png"
    = link_to image_tag("login/quiz.jpg", :class => "quiz_img"), survey_path, :target => "blank"
    = link_to 'Responder ao quiz', survey_path, :target => "blank", :class => "bt_quiz"

