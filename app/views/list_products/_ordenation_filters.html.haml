.exhibition-mode.exhibition-olooklet
  = form_tag @url_builder.current_filters, method: 'get' do
    %input{type:"hidden", name:"preco", id:"price", value:("#{@search.range_values_for(:price)[:min] rescue 0}-#{@search.range_values_for(:price)[:max] rescue 600}" if @search.filter_value(:price))}
    %fieldset
      %p{class: "selected_relevance#{' watermelon' if params[:por].present? && params[:por].to_s != '0'}" }
        - if params[:por].present?
          %span= params[:por] != '0' ? params[:por].gsub("-", " ").titleize : "ORDENAÇÃO"
        - else
          %span ORDENAÇÃO

        = select_tag('por', options_for_select({"NOSSA SELEÇÃO" => 0, "MENOR PREÇO" => "menor-preco", "MAIOR PREÇO" => "maior-preco", "MAIOR DESCONTO" => "maior-desconto", "NOVIDADES" => "novidade"}, :selected => params[:por]), :class => "custom_select", :onchange => ("$(this).parents('form').submit();"))

.price-range.price-range-olooklet
  %p#min-value-label{style:'background-image: none'} 0
  %p#max-value-label{style:'background-image: none'} 0
  .slider
    #slider-range
  %input{type: "text", id: "min-value"}
  %input{type:"text", id:"max-value"}
