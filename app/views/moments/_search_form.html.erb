<div id="filters_container">
  <%= form_for(update_moment_path, :url => update_moment_path, :method => :get, :remote => true, :html => {:id => "filter"}) do %>
      <%= hidden_field_tag('id', @moment ? @moment.id : nil) %>
      <%= hidden_field_tag('sort_filter') %>

      <%= moment_presenter.display_shoe_filters %>
      <%= moment_presenter.display_color_filters %>
      <%= moment_presenter.display_shoe_size_filters %>
      <%= moment_presenter.display_heel_filters %>
      <%= moment_presenter.display_bag_filters %>
      <%= moment_presenter.display_bag_color_filters %>
      <%= moment_presenter.display_accessory_filters %>
      <%= moment_presenter.display_cloth_filters %>
      <%#= moment_presenter.display_cloth_size_filters %>

      <%= hidden_field_tag('category_id', @category_id ? @category_id : nil) %>

    <% end %>
</div>
