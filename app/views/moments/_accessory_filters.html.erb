<div class="filter main">
  <h1 class="acessories">Acessórios</h1>
  <ol>
    <li>
      <%= check_box_tag "select_all_accessories", 1, params[:select_all_accessories], :class => "select_all" %>
      <%= label_tag "select_all_accessories", "Todos os acessórios" %>
    </li>
<% moment_presenter.moment.catalog.accessories.each do |subcategory| %>
    <li>
      <%= check_box_tag('bag_accessory_subcategories[]', subcategory, params[:bag_accessory_subcategories] && params[:bag_accessory_subcategories].include?(subcategory), :id => subcategory) %>
      <%= label_tag(subcategory, nil, :for => subcategory) %>
    </li>
<% end %>
  </ol>
</div>


