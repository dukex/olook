<% present 'Moment', {:moment => @moment, :moments => @moments, :category_id => @category_id} do |moment_presenter| %>
  <% content_for :head do %>
    <%= stylesheet_link_tag "section/moments" %>
    <meta name="chaordic:source" content="<%= @glasses ? "home/#{@glasses}": "home/#{section_name @pixel_information}"%>">
    <meta name="chaordic:user" content="<%= @chaordic_user %>">
    <meta name="chaordic:category" content="<%= @glasses ? "#{@glasses}" : "#{section_name @pixel_information}"%>">
  <% end %>

  <% content_for :footer do %>
    <%= javascript_include_tag "moments" %>
    <%= render :partial => "shared/metrics/criteo/listing_tracker", :locals => { :products => @products_id } %>
  <% end %>

  <div id="moments" class="content">
	<section class="header-moments">
		<h1 class="shoes">Você está em <b>sapatos</b></h1>
		<div id="tags">
	      <ul>&nbsp;</ul>
	    </div>
    </section>
    <%= moment_presenter.display_nav_bar %>
    <%= moment_presenter.render_search_form %>
    <div id="products_container">

      <%= render "shared/filters/order" %>

      <% if @featured_products %>
        <%= render "shared/featured_products", :products => @featured_products, :category_id => @category_id %>
      <% end %>

      <ul id="products">
        <%= render "products", :products => @catalog_products %>
      </ul>

      <div class="loading"></div>
      <%= will_paginate @catalog_products %>
    </div>
  </div>
  <%= msn_tags %>
  <%= render "shared/metrics/sociomantic/products", :products => @catalog_products,:categories_id => @categories_id %>
<% end %>
