<% present 'Moment', :moment => @moment do |moment_presenter| %>
  <% content_for :head do %>
    <%= stylesheet_link_tag "section/moments" %>
  <% end %>

  <% content_for :footer do %>
    <%= javascript_include_tag "moments" %>
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/pt_BR/all.js#xfbml=1&appId=<%= @facebook_app_id %>";
    fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>
  <% end %>

  <% content_for :full do %>
    <div id="banner" style="background-image: url('<%= @moment.header_image %>');"></div>
    <div class="content">
      <%= render "nav", :moments => @moments %>
    </div>
  <% end %>

  <div id="moments" class="content">
    <%= moment_presenter.render_search_form %>
    <div id="products_container">
      <div id="order_filter">
        <%= form_for("", :html => {:id => "moment_order_filter"}) do %>
          <ol>
            <li class="select">
              <%= label_tag "Ordenar por:" %>
              <%= select_tag('order_filter', options_for_select({"Menor preço" => 0, "Maior preço" => 1}), :class => "custom_select") %>
            </li>
          </ol>
        <% end %>
      </div>
      <ul id="products">
        <%= render "products", :products => @catalog_products %>
      </ul>
      <div class="loading"></div>
      <%= will_paginate @catalog_products %>
    </div>
  </div>
<% end %>
