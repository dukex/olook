$("#freight_price").
  hide().
  html("<%= number_to_currency(@freight_price) %>").
  delay(200).
  fadeIn();

$("#delivery_time").
  hide().
  html("<%= delivery_time_message(@days_to_deliver) %>").
  delay(200).
  fadeIn();

$("#total").hide().html("<%= number_to_currency(total_with_freight(@freight_price)) %>");
$("#total_billet").hide().html("<%= number_to_currency(total_with_freight(@freight_price, Billet.new)) %>");
$("#total_debit").hide().html("<%= number_to_currency(total_with_freight(@freight_price, Debit.new)) %>");
$("#freight_message").hide().html('<%= show_freight_message().html_safe %>').delay(200).fadeIn();

showTotal();
updateCreditCardSettlementsValue($('#checkout_payment_payments'), "<%= total_with_freight(@freight_price) =%>", "<%= current_user.reseller %>");

