<% content_for :head do %>
  <%= stylesheet_link_tag "section/checkout" %>
<% end %>

<section id="payment" class="payment_new checkout">
  <%= form_for(@payment) do |f| %>
    <section class="main">
      <h1>Escolha uma forma de pagamento</h1>
      <%= render :partial => "shared/errors", :locals => { :object => @payment } %>
      <%= render :partial => "shared/payments/payment_methods" %>
      <%= render :partial => 'form', :locals => { :f => f, :payment => @payment, :bank => @bank, :installments => @installments } %>
      <div id="container_marcos">
        <p>Finalize sua compra e tenha a chance de ter um dia incrível no salão <br />do Marcos Proença, com direito a uma transformação total.</p>
        <p>
          <%#= check_box :campaing, :sign_campaing, {}, 'marcos_proenca', false %>
          <%= f.check_box :user_name, {}, 'marcos_proenca', false %>
          <%= f.label :user_name, "aceito receber novidades do Marcos Proença" %>
        </p>
        <p>
          <input type="submit" name="finish" class="finish" value="" onclick="this.form.submit(); this.disabled = 1;" />
        </p>
        <p>
          <%= link_to "confira o regulamento", "#" %>
        </p>
      </div>
    </section>
    <section class="sidebar">
      <% content_for :checkout_sidebar do %>
        <%= render "shared/payments/info_address", :order => @order %>
      <% end %>
      <%= render "shared/payments/info_sidebar", :cart => @cart %>
    </section>
  <% end %>
</section>
