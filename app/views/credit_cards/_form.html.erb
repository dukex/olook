<div class="payments">
  <h1>Selecione a bandeira do seu cart√£o:</h1>
  <fieldset class="banks">
    <ol>
      <% CreditCard::BANKS_OPTIONS.each do |bank| %>
        <li class='<%= "#{bank}" %>'>
          <%= radio_button_tag "credit_card[bank]", bank, false  %>
          <%= label_tag "credit_card_bank_#{bank}", bank %>
        </li>
      <% end %>
    </ol>
  </fieldset>
  <fieldset class="payments">
    <ol>
      <li>
        <%= f.label :payments %>
        <% portions = 1..6 %>
        <%= f.select :payments, portions.collect {|d| [d.to_s,d.to_s]} %>
      </li>
    </ol>
  </fieldset>
</div>

