<li>
  <h3>Qual o tamanho do seu sapato?</h3>
  <ul class="question">
    <% (33..41).each do |i| %>
    <li>
      <label for="<%= "1_10_#{i}" %>"> <%= i %>
        <%= radio_button_tag("questions[question_foot_#{i}]", "10_#{i}") %>
        </label>
      </li>
    <% end %>
  </ul>

  <h3>Qual tamanho de vestido você veste?</h3>
  <ul class="question">
    <% sizes = %w(PP P M G GG) %>
    <% 5.times do |i| %>
      <li>
        <label for="<%= "2_11_#{i}" %>"> <%= sizes[i] %>
          <%= radio_button_tag("questions[question_dress_#{i}]",  "11_#{i}") %>
      </label>
      </li>
    <% end %>
  </ul>
  
  <h3>Data de Nascimento</h3>
  <fieldset class="select">
    <select name='day'>
      <option>Dia</option>
      <% (1..31).each do |d| %>
        <option value="<%= d %>"><%= "%02d" % d %></option>
      <% end %>
    </select>
    
    <select name='month'>
      <option>Mês</option>
      <% (1..12).each do |m| %>
        <option value="<%= m %>"><%= "%02d" % m %></option>
      <% end %>
    </select>

    <select id="birthdate" name='year'>
      <option>Ano</option>
      <% Time.now.year.downto(1900) do |a| %>
        <option value="<%= a %>"><%= a %></option>
      <% end %>
    </select>
  </fieldset>

  <fieldset class='buttons'>
    <ol>
      <li class="grey-button">
        <%= submit_tag("Enviar")  %>
      </li>
    </ol>
  </fieldset>

</li>
