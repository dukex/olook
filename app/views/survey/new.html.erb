<% content_for(:head) do %>
  <%= render "shared/close_popup_js", :redirect_url => @redirect_url  %>
<% end %>
<%= content_tag :h2, "Convidada por #{session[:invite][:invited_by]}" if session[:invite] %>
<span id="next_link"></span>
<div class="loading"></div>
  <div id="survey">
    <%= form_tag({:controller => "survey", :action => "create"}) do %>
      <input type="hidden" id="id_first_question" value="<%= @presenter.id_first_question %>" />
      <ul class="questions">

        <% question_number = 0 %>
        <% for question in @presenter.common_questions %>
          <li id="question_<%= question.id %>" class="images">
            <h2><%= question.title %></h2>
            <ol class="options">
              <%= render "answers_radio_button", :question => question, :question_number => (question_number += 1) %>
            </ol>
          </li>
        <% end %>

        <% question = @presenter.shoe_question %>
        <li id="question_<%= question.id %>" class="images shoes">
          <h2><%= question.title %></h2>
          <ol class="options">
            <%= render "answers_shoes", :question => question, :question_number => (question_number += 1) %>
          </ol>
        </li>

        <% question = @presenter.word_question %>
        <li id="question_<%= question.id %>" class="words">
          <h2><%= question.title %></h2>
          <ol class="options">
            <%= render "answers_check_box", :question => question %>
          </ol>
        </li>

        <% question_shoe_size = @presenter.shoe_size_question %>
        <% question_dress_size = @presenter.dress_size_question %>
         <li id="question_<%= question_shoe_size.id %>" class="about">
          <ol class="options">
            <%= render "answers_about", :question_shoe_size => question_shoe_size, :question_dress_size => question_dress_size %>
          </ol>
        </li>
    </ul>
  </div>
<% end %>
