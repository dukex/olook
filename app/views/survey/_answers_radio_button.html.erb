<% answer_number = 0 %>
<% question.answers.each do |answer| %>
  <li>
    <h3><%= answer.title %></h3>
    <label for="<%="for_questions_question_#{answer.question.id}_#{answer.id}" %>">
      <div class="shadow"></div>
      <%= radio_button_tag("questions[question_#{answer.question.id}]", answer.id) %>
      <%= image_tag "common/ajax-loader.gif", :class => 'asynch-load-image', :'data-href' => "/assets/quiz/#{question_number}_#{answer_number += 1}.jpg" %>
    </label>
  </li>
<% end %>
