<li>
  <% @colors.each do |title, colors| %>
    <div>
      <h3><%= title %></h3>
      <ol class="colors">
        <% colors.each do |color| %>
          <li class="<%= color %>"><%= color.gsub("-", " ") %></li>
        <% end %>
      </ol>

      <ol id="<%= title.downcase.gsub(" ", "_") %>" class="stars">
        <% 5.times do |i| %>
          <li>
            <label for="<%= "#{title.downcase.gsub(" ", "_")}_#{i}" %>">
              <%= radio_button_tag(title.downcase, i) %>
            </label>
          </li>
        <% end %>
      </ol>
    </div>
  <% end %>
</li>
