<div id="showroom">
  <section id="greetings">
    <%= render :partial => "showroom_facebook_connect" %>
    <%#= render :partial => "showroom_facebook_connected" %>
    <div class="lookbook">
      <h1>Lookbooks</h1>
      <%= image_tag "fake/showroom-lookbook.png" %>
    </div>
  </section>
  <section class="container_product" id="shoes">
    <h1>Sapatos de <span>Novembro</span></h1>
    <div class="type_list">
      <div class="products_list best">
        <ul>
          <% 5.times do %>
            <li>
              <a href="#">
                <%= image_tag "fake/showroom-product.png" %>
              </a>
            </li>
          <% end %>
        </ul>
        <%= link_to "Veja os sapatos que quase entraram para sua vitrine", "javascript:void(0);", :class => "more", :rel => "almost" %>
      </div>
      <div class="products_list almost">
        <ul>
          <% 5.times do %>
            <li>
              <a href="#">
                <%= image_tag "fake/showroom-product.png" %>
              </a>
            </li>
          <% end %>
        </ul>
        <%= link_to "Veja mais sapatos", "javascript:void(0);", :class => "more", :rel => "all" %>
      </div>
      <div class="products_list all">
        <ul>
          <% 10.times do %>
            <li>
              <a href="#">
                <%= image_tag "fake/showroom-product.png" %>
              </a>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </section>
  <section class="container_product" id="purse">
    <h1>Bolsas de <span>Novembro</span></h1>
  </section>
