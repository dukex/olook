<% content_for :head do %>
  <%= stylesheet_link_tag "new_structure/section/lite_showroom" %>
  
  <meta name="chaordic:source" content="home/vitrine">
  <meta name="chaordic:user" content="<%= @chaordic_user %>">
  <meta name="chaordic:category" content="Vitrine" >

<% end %>



<div id="showroom">

  <section class="user-info">
    <div id="profile">
      <div class="photo">
      <% if current_user.has_facebook? %>
        <%= content_tag :div, image_tag("https://graph.facebook.com/#{current_user.uid}/picture?width=90&height=85", class: 'avatar-photo'), class: 'avatar' if current_user.uid %>
      <% else %>  
        <p>Que tal sua foto aqui?</p>
        <a href="/conta/auth/facebook" clas="btn-connect-face">Conectar no Facebook</a>
      <% end %>
      </div>

      <div class="description">
        <p class="name">Olá, <%= current_user.first_name %>!</p>
        <p>
          Nossas stylists montaram uma seleção incrível de produtos para você este mês.
          Confira e aproveite sem moderação!
          <%= link_to "Confira aqui o seu perfil",'javascript:void(0);', class:"show-profile" %> ou se não gostar do resultado, <%= link_to "responda nosso style quiz", new_survey_path %> novamente.
        </p>

      </div>  
  
    </div>  
    
    <% if @friends && @friends.any? %>
      <div id="mask_carousel_facebook">
        <p>Últimas amigas que se registraram</p>
        <%= link_to "Anterior", "javascript:void(0);", :class => "carousel-prev-fb", :id=> "prev-button" %>
        <ul id="friends-face" class="<%= 'carousel' if @friends.count > 12 %>">
          <%- @friends.each do |friend| -%>
            <li>
              <%= link_to friend_showroom_path(:friend_id => friend.id) do %>
                <div class="mask">
                  <%= image_tag user_avatar(friend, 'square'), :title => friend.name %>
                </div>
              <%- end -%>
            </li>
          <%- end -%>
        </ul>
        <%= link_to "Próximo", "javascript:void(0);", :class => "carousel-next-fb", :id=> "next-button" %>
        <%= link_to "Convide mais amigas e ganhe créditos!", member_invite_path, class: "invite-more" %>
      </div>
    <%- else -%>
      <div id="banner_creditos"><%= link_to (image_tag('showroom/banner.png')), member_invite_path, :title => "Convide amigas e ganhe R$ 20 quando elas fizerem a primeira compra" %></div>
    <%- end -%>
  </section>
  
  <% if @user.profile_name.present? %>
    <%= image_tag "profiles/mini_#{@user.profile_name.to_s}.jpg", class: "profile-quiz" %>
    <%= render "shared/modal/retake_quiz", :user => @user, :link => "#"  %>
  <% end %>  
  
  <div class="showroom-title">
    <p><span>Sua vitrine de <%= current_collection_name %></span></p>
  </div>
      
  <section class="container_product" id="clothes_container">
    
    <div class="fb_share">
      <p>Gostou da sua vitrine? Então compartilhe!</p>
      <%= link_to 'Compartilhar', "javascript:void(0);", id: "facebook_share", :class => "share", :"data-width" => 128, :"data-height" => 24 %>
    </div>
      
    <ul>
      <%- @cloth.shift(5).each do |product| -%>
          <%= render 'shared/lite_product_item', product: product  %>
      <%- end -%>
    </ul>

    <ul class="second_line">
      <%- @cloth.shift(5).each do |product| %>
        <%= render 'shared/lite_product_item', product: product %>
      <%- end -%>
    </ul>

    <%= content_tag(:p, link_to("+ ver mais roupas +", "/roupas", :class => "more clothes", :onclick => track_event("Showroom", "SeeMore", "Clothes"), :rel => "follow"), class:"see-more")%>
  </section>

  <section class="container_product" id="shoes_container">

    <ul>
      <%- @shoes.each do |product| -%>
        <%= render 'shared/lite_product_item', product: product %>
      <%- end -%>
    </ul>
    
    <%= content_tag(:p, link_to("+ ver mais sapatos +", "/sapatos", :class => "more shoes", :onclick => track_event("Showroom", "SeeMore", "Shoes"), :rel => "follow"), class:"see-more")%>
  </section>

 
  <section class="container_product" id="purse_container">
    <ul>
      <%- @bags.each do |product| -%>
        <%= render 'shared/lite_product_item', product: product %>
      <%- end -%>
    </ul>

    <%= content_tag(:p, link_to("+ ver mais bolsas +", "/bolsas", :class => "more purses", :onclick => track_event("Showroom", "SeeMore", "Bags"), :rel => "follow"), class:"see-more")%>
  </section>


  <section class="container_product" id="accessories_container">    
    <ul>
      <%- @accessories.each do |product| -%>
        <%= render 'shared/lite_product_item', product: product %>
      <%- end -%>
    </ul>
    
    <%= content_tag(:p, link_to("+ ver mais acessórios +", "/acessórios", :class => "more accessories", :onclick => track_event("Showroom", "SeeMore", "Acessories"), :rel => "follow"), class:"see-more")%>
  </section>

</div> <%# fecha div#showroom %>

<%#= render "home/boxes" %>
<section id="boxes">
<ul>
  <li>
    <%= link_to clothes_path, onclick: track_event('DestaquesRodape', "BannerEsquerda") do %>
      <%= image_tag "home/picture-1.jpg" %>
      <h1>Novidades todos os meses</h1>
      <p>Agora temos o look completo</p>
    <% end %>
  </li>
  <li>
    <%= link_to shoes_path, onclick: track_event('DestaquesRodape', "BannerCentro") do %>
      <%= image_tag "home/picture-2.jpg" %>
      <h1>SAPATOS HOT</h1>
      <p>Vai ser difícil escolher apenas um</p>
    <% end %>
  </li>
  <li class="iehack"><!-- NAO REMOVER A CLASSE -->
    <%= link_to accessories_path, onclick: track_event('DestaquesRodape', "BannerDireita") do %>
      <%= image_tag "home/picture-3.jpg" %>
      <h1>Pontue com acessórios</h1>
      <p>Eles valorizam qualquer look</p>
    <% end %>
  </li>
</ul>
</section>
<%#= fim "home/boxes" %>

<%#= render "home/products_categories" %>
<div id="products_categories">
  <h1>O que você quer ver hoje?</h1>
  <ul>
    <li class="blusa"><%= link_to "Blusa", "/roupas?cloth_subcategories[]=blusa"%></li>
    <li class="camisa"><%= link_to "Camisa", "/roupas?cloth_subcategories[]=camisa" %></li>
    <li class="calca"><%= link_to "Calça", "/roupas?cloth_subcategories[]=calca" %></li>
    <li class="saia"><%= link_to "Saia", "/roupas?cloth_subcategories[]=saia" %></li>
    <li class="vestido"><%= link_to "Vestido", "/roupas?cloth_subcategories[]=vestido" %></li>
    <li class="anabela"><%= link_to "Anabela", anabelas_path %></li>
    <li class="rasteira"><%= link_to "Rasteira", rasteiras_path %></li>
    <li class="sapatilha"><%= link_to "Sapatilha", sapatilhas_path %></li>
    <li class="scarpin"><%= link_to "Scarpin", scarpins_path %></li>
    <li class="sneaker"><%= link_to "Sneaker", sneakers_path %></li>
    <li class="acessorios"><%= link_to "Acessórios", accessories_path %></li>
    <li class="bolsas"><%= link_to "Bolsas", bags_path %></li>
  </ul>
</div>
<%#= fim "home/products_categories" %>

<%#= render "home/facebook_box" %>
<div id="facebook_box">
  <%= image_tag "home/olook.jpg", title: "Olook" %>
  <h1><span>olook</span> no facebook</h1>
  <%= render "shared/facebook_like_button" %>
</div>
<%#= fim "home/facebook_box" %>

<!-- MODALS -->
<%#= render 'shared/banners/olooklet' extraindo o conteudo aqui embaixo %>
<% if show_current_liquidation_advertise? %>
  <%= link_to image_tag('common/olooklet_banner_header.jpg'), liquidations_path(current_liquidation.id), :class => "liquidation_banner" %>
<% end %>
<%# fim do 'shared/banners/olooklet -%>


<% if Campaign.activated_campaign && Campaign.activated_campaign.lightbox? %>
  <%= render :partial => "shared/modal/lightbox", :locals => {:image_url => Campaign.activated_campaign.lightbox_url, :link => Campaign.activated_campaign.link}  %>
<% end %>


<% if @show_liquidation_lightbox && current_liquidation.lightbox_banner?  %>
<%= render "shared/modal/liquidation" %>
<% end %>
<!-- END MODALS -->



<% content_for :footer do %>
  <%= javascript_include_tag "section/lite_showroom" %>
  
  <%= render "shared/facebook_js", :member => current_user, :facebook_app_id => @facebook_app_id  %>  
  
  <% if @user.first_visit_for_member? %>
    <%= javascript_include_tag "first_visit" %>
    <%= render "shared/metrics/google/track_signup_page_view" %>
    <%= render "shared/metrics/metaffiliation/action", :email => current_user.email %>
    <%= render "shared/metrics/adlead/adlead" %>
  <% elsif @is_retake %>
    <script type="text/javascript">
    setTimeout(function() {
      $("img.profile-quiz").trigger('click');
    }, 2000);
    </script>
  <% end %>

<% end %>
