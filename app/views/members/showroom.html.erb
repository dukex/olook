<% present 'Showroom', :member => @user  do |showroom_presenter| %>
  <% content_for :head do %>
    <%= stylesheet_link_tag "section/showroom" %>
  <% end %>

  <% content_for :footer do %>
    <%= javascript_include_tag "showroom" %>
    <% if @is_the_first_visit %>
      <%= javascript_include_tag "first_visit" %>
      <%= render "shared/metrics/google/google_quiz_conversion" %>
      <%= render "shared/metrics/google/track_signup_page_view" %>
      <%= render "shared/metrics/metaffiliation/action", :email => current_user.email %>
      <%= render "shared/metrics/adlead/adlead" %>
    <% elsif @is_retake %>
      <script type="text/javascript">
      setTimeout(function() {
        initBase.showProfileLightbox();
      }, 2000);
      </script>
    <% end %>
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/pt_BR/all.js#xfbml=1&appId=<%= @facebook_app_id %>";
    fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>
  <% end %>

  <div id="showroom">
    <%= render "shared/modal/retake_quiz", :user => @user, :link => "#" %>
    <%= render "shared/modal/liquidation" if @show_liquidation_lightbox && current_liquidation.lightbox_banner?  %>
    <section id="greetings">
      <%= showroom_presenter.render_identification(@friends) %>
      <%= render "members/showroom_lookbooks", :lookbooks => @lookbooks %>
    </section>

    <%= render :partial => 'members/showroom_shoes', :locals => {:showroom_presenter => showroom_presenter} %>
    <%= render :partial => 'members/showroom_bags', :locals => {:showroom_presenter => showroom_presenter} %>
    <%= render :partial => 'members/showroom_accessories', :locals => {:showroom_presenter => showroom_presenter} %>
    <%= image_tag "showroom/banner_marcos_proenca.jpg", :class => "banner" %>
    <%= render "shared/metrics/boobox/members" %>
  </div>
  <% if user_signed_in? %>
    <%= render "shared/invite", :user => current_user %>
  <% end %>
<% end %>
