<% content_for :head do %>
  <%= stylesheet_link_tag "section/credits" %>
<% end %>

<% content_for :footer do %>
  <%= javascript_include_tag "credits" %>
<% end %>

<section id="credits">
  <h1>Ganhe créditos e economize muito nas suas compras</h1>
  <section id="friends_credits">
    <h1>Convide suas amigas e ganhe R$ 10 na primeira compra de cada uma delas.</h1>
    <%= render "shared/social/share", :user => current_user %>
    <div class="rules">
      <%= link_to "Confira o regulamento completo", "#" %>
    </div>
  </section>
  <section id="purchase_credits">
    <h1>Você sempre ganha 20% do valor das suas compras em desconto no próximo pedido</h1>
    <div id="box_months">
      <h3>O crédito é válido para as próximas 2 coleções.</h3>
      <table cellpadding="0" cellspacing="0" class="current">
        <thead>
          <tr>
            <th><%= l Time.now, :format => "%B" %></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>mês atual</td>
          </tr>
        </tbody>
      </table>
      <table cellpadding="0" cellspacing="0">
        <thead>
          <tr>
            <th><%= l (Time.now + 1.month), :format => "%B" %></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>&nbsp;</td>
          </tr>
        </tbody>
      </table>
      <table cellpadding="0" cellspacing="0">
        <thead>
          <tr>
            <th><%= l (Time.now + 2.month), :format => "%B" %></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>&nbsp;</td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="rules">
      <%= link_to "Confira o regulamento completo", "#" %>
    </div>
  </section>
</section>
