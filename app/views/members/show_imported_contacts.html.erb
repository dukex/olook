<div id="invite_list" class="listing">
  <%= form_tag(member_invite_imported_contacts_path) do %>
    <fieldset class="inputs">
      <ol>
        <li class="select_all">
          <%= check_box_tag 'select_all' %>
          <%= label_tag 'select_all', 'Selecionar todos' %>
        </li>
        <li>
          <%= image_submit_tag('/assets/common/btn-invite-email.png') %>
        </li>
      </ol>
    </fieldset>
    <table id='list'>
      <tbody>
        <% @contacts.each do |contact_name, contact_email| %>
          <tr>
            <td><%= check_box_tag("email_address[]", contact_email) %></td>
            <td><%= contact_name.nil? ? contact_email : "#{contact_name} <#{contact_email}>" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= image_submit_tag('/assets/common/btn-invite-email.png') %>
  <% end %>
</div>
