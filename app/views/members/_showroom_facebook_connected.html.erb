<div class="facebook connected">
  <div class="avatar"><%= showroom_presenter.facebook_avatar %></div>
  <h1><%= showroom_presenter.welcome_message %><br />Esta é <%= link_to "sua vitrine", "#" %> de <%= showroom_presenter.collection_name %></h1>
  <div class="profile">
    <%= link_to "#" do %>
      <span>Veja seu estilo novamente</span>
      <%= image_tag "fake/mini_profile.jpg" %>
    <% end %>
  </div>
  <% if @friends && @friends.any? %>
  <h3>Últimas amigas que se registraram:</h3>
  <ul>
    <% @friends.each do |friend| %>
      <li>
        <%= link_to friend_showroom_path(:friend_id => friend.id) do %>
          <div class="mask">
            <%= image_tag user_avatar(friend), :title => friend.name %>
          </div>
        <% end %>
      </li>
    <% end %>
  </ul>
  <% end %>
</div>
