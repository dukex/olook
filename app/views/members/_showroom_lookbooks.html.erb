<div class="lookbook">
  <h1 class="title">Tendências</h1>
  <div id="mask_carousel_showroom">
    <ul>
      <% lookbooks.each do |lookbook| %>
        <li>
          <% if lookbook.has_video? %>
            <%= link_to "Assista ao vídeo", "#", :class => "video_link", :rel => "#{lookbook.video.url}", :title => "#{lookbook.video.title}", :style => "background-image: url('#{lookbook.movie_image_url(:movie_thumb_mini)}');" %>
            <div class="video_description">
              <h1><%= lookbook.video.title %></h1>
              <%= link_to "Saiba tudo sobre essa tendência", lookbook_path(lookbook.slug) %>
            </div>
          <% end %>
          <%= link_to lookbook_path(lookbook.slug), :class => "item" do %>
            <%= image_tag lookbook.thumb_image.try(:url), :alt => "#{lookbook.name}" %>
            <h1><%= lookbook.name %></h1>
          <% end %>
        </li>
      <% end %>
    </ul>
    <%= link_to "Anterior", "javascript:void(0);", :class => "carousel-prev" %>
    <%= link_to "Próximo", "javascript:void(0);", :class => "carousel-next" %>
  </div>
</div>
