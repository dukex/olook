<% content_for :head do %>
  <%= stylesheet_link_tag "section/welcome" %>
  <script src="http://connect.facebook.net/en_US/all.js"></script>
<% end %>

<% content_for :footer do %>
  <%= javascript_include_tag "welcome" %>
  <% if @is_the_first_visit %>
    <%= render "shared/metrics/google/google_quiz_conversion" %>
    <%= render "shared/metrics/google/track_signup_page_view" %>
    <%= render "shared/metrics/metaffiliation/action", :email => current_user.email %>
    <%= render "shared/metrics/adlead/adlead" %>
  <% end %>
<% end %>

<% if @is_the_first_visit %>
  <%= render 'shared/models' %>
<% end %>

<div id="fb-root"></div>
<%= render "facebook_js", :member => @user, :facebook_app_id => @facebook_app_id  %>

<section id="welcome">
  <h1 class="warn">Sua stylist está criando sua <span>vitrine personalizada,</span> e ela ficará pronta nas próximas 24 horas</h1>
  <div class="banner">
    <% if @banner %>
      <%= link_to image_tag(@banner, :alt => current_liquidation.name), liquidations_path(current_liquidation.id) %>
    <% end %>
  </div>
  <%= render 'welcome_painel' %>
  <%= render 'welcome_products' %>
  <%= render 'welcome_press' %>
</section>
